{% doc %}
  @prompt
    จะสร้าง link ใส่รูป เล็ก ๆ ได่แล้วถัดไปก็เป็น text
    จะเอาใส่ icon line แล้วก็เขียนติดต่อไลน์สะดวก  ในภาษาไทย
    ส่วนโหมดอังกฤษก็จะเป็นรูปไอคอน whatsapp และ link ติดต่อ
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-contact-link-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
  }

  .ai-contact-link__wrapper-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    gap: {{ block.settings.icon_text_gap }}px;
    text-decoration: none;
    transition: opacity 0.3s ease;
  }

  .ai-contact-link__wrapper-{{ ai_gen_id }}:hover {
    opacity: 0.7;
  }

  .ai-contact-link__icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-contact-link__icon-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .ai-contact-link__text-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.4;
  }

  @media screen and (max-width: 749px) {
    .ai-contact-link__icon-{{ ai_gen_id }} {
      width: {{ block.settings.icon_size | times: 0.8 }}px;
      height: {{ block.settings.icon_size | times: 0.8 }}px;
    }

    .ai-contact-link__text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<contact-link-{{ ai_gen_id }}
  class="ai-contact-link-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  {% liquid
    assign current_locale = request.locale.iso_code
    assign is_thai = false
    if current_locale == 'th'
      assign is_thai = true
    endif
  %}

  {% if is_thai %}
    <a
      href="{{ block.settings.line_link }}"
      class="ai-contact-link__wrapper-{{ ai_gen_id }}"
      target="_blank"
      rel="noopener noreferrer"
    >
      {% if block.settings.line_icon %}
        <div class="ai-contact-link__icon-{{ ai_gen_id }}">
          <img
            src="{{ block.settings.line_icon | image_url: width: 200 }}"
            alt="LINE"
            loading="lazy"
            width="200"
            height="200"
          >
        </div>
      {% endif %}
      <span class="ai-contact-link__text-{{ ai_gen_id }}">{{ block.settings.line_text }}</span>
    </a>
  {% else %}
    <a
      href="{{ block.settings.whatsapp_link }}"
      class="ai-contact-link__wrapper-{{ ai_gen_id }}"
      target="_blank"
      rel="noopener noreferrer"
    >
      {% if block.settings.whatsapp_icon %}
        <div class="ai-contact-link__icon-{{ ai_gen_id }}">
          <img
            src="{{ block.settings.whatsapp_icon | image_url: width: 200 }}"
            alt="WhatsApp"
            loading="lazy"
            width="200"
            height="200"
          >
        </div>
      {% endif %}
      <span class="ai-contact-link__text-{{ ai_gen_id }}">{{ block.settings.whatsapp_text }}</span>
    </a>
  {% endif %}
</contact-link-{{ ai_gen_id }}>

<script>
  (function() {
    class ContactLink{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.style.display = 'block';
      }
    }

    customElements.define('contact-link-{{ ai_gen_id }}', ContactLink{{ ai_gen_id }});
  })();
</script>

{% schema %}
{
  "name": "Contact link",
  "settings": [
    {
      "type": "header",
      "content": "Thai language (LINE)"
    },
    {
      "type": "image_picker",
      "id": "line_icon",
      "label": "LINE icon"
    },
    {
      "type": "text",
      "id": "line_text",
      "label": "Text",
      "default": "ติดต่อไลน์สะดวก"
    },
    {
      "type": "url",
      "id": "line_link",
      "label": "LINE link"
    },
    {
      "type": "header",
      "content": "English language (WhatsApp)"
    },
    {
      "type": "image_picker",
      "id": "whatsapp_icon",
      "label": "WhatsApp icon"
    },
    {
      "type": "text",
      "id": "whatsapp_text",
      "label": "Text",
      "default": "Contact us"
    },
    {
      "type": "url",
      "id": "whatsapp_link",
      "label": "WhatsApp link"
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "range",
      "id": "icon_size",
      "label": "Icon size",
      "min": 16,
      "max": 64,
      "step": 4,
      "unit": "px",
      "default": 32
    },
    {
      "type": "range",
      "id": "text_size",
      "label": "Text size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "default": 16
    },
    {
      "type": "range",
      "id": "icon_text_gap",
      "label": "Gap between icon and text",
      "min": 4,
      "max": 24,
      "step": 2,
      "unit": "px",
      "default": 8
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "desktop_width_percent",
      "label": "Desktop width",
      "min": 10,
      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 100
    }
  ],
  "presets": [
    {
      "name": "Contact link"
    }
  ]
}
{% endschema %}
