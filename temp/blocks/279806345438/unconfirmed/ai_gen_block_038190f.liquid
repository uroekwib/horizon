{% doc %}
  @prompt
    Use Shopify Collage section: heading + 3 blocks (large image left, video top-right, text bottom-right). Desktop layout = Left large block, mobile layout = Collage., Add a cover image option to the Video block.
    
    If a cover image is selected:
    - Show the cover image first.
    - Display a play button overlay.
    - Only load and play the video when clicked.
    
    Keep existing video functionality.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-collage-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
  }

  .ai-collage-container-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.spacing }}px;
  }

  .ai-collage-heading-{{ ai_gen_id }} {
    margin: 0;
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    text-align: {{ block.settings.heading_alignment }};
  }

  .ai-collage-grid-{{ ai_gen_id }} {
    display: grid;
    gap: {{ block.settings.spacing }}px;
    width: 100%;
  }

  @media screen and (min-width: 750px) {
    .ai-collage-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr 1fr;
      grid-template-rows: 1fr 1fr;
    }

    .ai-collage-item-large-{{ ai_gen_id }} {
      grid-row: 1 / 3;
      grid-column: 1;
    }

    .ai-collage-item-video-{{ ai_gen_id }} {
      grid-row: 1;
      grid-column: 2;
    }

    .ai-collage-item-text-{{ ai_gen_id }} {
      grid-row: 2;
      grid-column: 2;
    }
  }

  @media screen and (max-width: 749px) {
    .ai-collage-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr 1fr;
      grid-template-rows: auto auto;
    }

    .ai-collage-item-large-{{ ai_gen_id }} {
      grid-column: 1 / 3;
      grid-row: 1;
    }

    .ai-collage-item-video-{{ ai_gen_id }} {
      grid-column: 1;
      grid-row: 2;
    }

    .ai-collage-item-text-{{ ai_gen_id }} {
      grid-column: 2;
      grid-row: 2;
    }
  }

  .ai-collage-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: 100%;
    min-height: 200px;
    overflow: hidden;
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-collage-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-collage-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-collage-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
  }

  .ai-collage-video-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: 100%;
    min-height: 200px;
    overflow: hidden;
    border-radius: {{ block.settings.border_radius }}px;
    background-color: #000000;
    cursor: pointer;
  }

  .ai-collage-video-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: none;
  }

  .ai-collage-video-{{ ai_gen_id }}.loaded {
    display: block;
  }

  .ai-collage-video-cover-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
  }

  .ai-collage-video-cover-{{ ai_gen_id }}.hidden {
    display: none;
  }

  .ai-collage-play-button-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: {{ block.settings.play_button_size }}px;
    height: {{ block.settings.play_button_size }}px;
    background-color: {{ block.settings.play_button_background }};
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 2;
    transition: transform 0.3s ease, background-color 0.3s ease;
    border: none;
    cursor: pointer;
  }

  .ai-collage-play-button-{{ ai_gen_id }}:hover {
    transform: translate(-50%, -50%) scale(1.1);
    background-color: {{ block.settings.play_button_hover_background }};
  }

  .ai-collage-play-button-{{ ai_gen_id }}.hidden {
    display: none;
  }

  .ai-collage-play-icon-{{ ai_gen_id }} {
    width: calc({{ block.settings.play_button_size }}px * 0.4);
    height: calc({{ block.settings.play_button_size }}px * 0.4);
    color: {{ block.settings.play_button_icon_color }};
    margin-left: 4px;
  }

  .ai-collage-video-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #1a1a1a;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-collage-video-placeholder-{{ ai_gen_id }} svg {
    width: 60px;
    height: 60px;
    color: #ffffff;
  }

  .ai-collage-text-wrapper-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: {{ block.settings.text_alignment }};
    padding: {{ block.settings.text_padding }}px;
    background-color: {{ block.settings.text_background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    min-height: 200px;
    height: 100%;
  }

  .ai-collage-text-content-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.5;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-collage-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 10px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 12px;
    color: #666;
    text-align: center;
    pointer-events: none;
    padding: 8px 12px;
    background-color: rgba(255, 255, 255, 0.9);
    border-radius: 4px;
  }
{% endstyle %}

<collage-block-{{ ai_gen_id }}
  class="ai-collage-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-collage-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-collage-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    <div class="ai-collage-grid-{{ ai_gen_id }}">
      <div class="ai-collage-item-large-{{ ai_gen_id }}">
        <div class="ai-collage-image-wrapper-{{ ai_gen_id }}">
          {% if block.settings.large_image %}
            <img
              src="{{ block.settings.large_image | image_url: width: 1200 }}"
              alt="{{ block.settings.large_image.alt | escape }}"
              loading="lazy"
              width="{{ block.settings.large_image.width }}"
              height="{{ block.settings.large_image.height }}"
              class="ai-collage-image-{{ ai_gen_id }}"
            >
          {% else %}
            <div class="ai-collage-image-placeholder-{{ ai_gen_id }}">
              {{ 'image' | placeholder_svg_tag }}
              <div class="ai-collage-empty-state-{{ ai_gen_id }}">
                เพิ่มรูปภาพใหญ่
              </div>
            </div>
          {% endif %}
        </div>
      </div>

      <div class="ai-collage-item-video-{{ ai_gen_id }}">
        <div class="ai-collage-video-wrapper-{{ ai_gen_id }}" data-video-wrapper>
          {% if block.settings.video_url != blank %}
            {% if block.settings.video_cover_image %}
              <img
                src="{{ block.settings.video_cover_image | image_url: width: 800 }}"
                alt="{{ block.settings.video_cover_image.alt | escape }}"
                loading="lazy"
                width="{{ block.settings.video_cover_image.width }}"
                height="{{ block.settings.video_cover_image.height }}"
                class="ai-collage-video-cover-{{ ai_gen_id }}"
                data-video-cover
              >
              <button
                class="ai-collage-play-button-{{ ai_gen_id }}"
                data-play-button
                aria-label="Play video"
              >
                <svg
                  class="ai-collage-play-icon-{{ ai_gen_id }}"
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 24 24"
                  fill="currentColor"
                >
                  <path d="M8 5v14l11-7z"/>
                </svg>
              </button>
            {% endif %}
            <video
              class="ai-collage-video-{{ ai_gen_id }} {% if block.settings.video_cover_image == blank %}loaded{% endif %}"
              {% if block.settings.video_cover_image == blank %}autoplay{% endif %}
              loop
              muted
              playsinline
              data-video
            >
              <source src="{{ block.settings.video_url }}" type="video/mp4">
            </video>
          {% else %}
            <div class="ai-collage-video-placeholder-{{ ai_gen_id }}">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                <path d="M8 5v14l11-7z"/>
              </svg>
              <div class="ai-collage-empty-state-{{ ai_gen_id }}">
                เพิ่ม URL วิดีโอ
              </div>
            </div>
          {% endif %}
        </div>
      </div>

      <div class="ai-collage-item-text-{{ ai_gen_id }}">
        <div class="ai-collage-text-wrapper-{{ ai_gen_id }}">
          {% if block.settings.text_content != blank %}
            <div class="ai-collage-text-content-{{ ai_gen_id }}">
              {{ block.settings.text_content }}
            </div>
          {% else %}
            <div class="ai-collage-text-content-{{ ai_gen_id }}" style="color: #999; font-style: italic;">
              เพิ่มข้อความที่นี่
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</collage-block-{{ ai_gen_id }}>

<script>
  (function() {
    class CollageBlock{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.videoWrapper = this.querySelector('[data-video-wrapper]');
        this.video = this.querySelector('[data-video]');
        this.playButton = this.querySelector('[data-play-button]');
        this.videoCover = this.querySelector('[data-video-cover]');

        if (this.video && !this.videoCover) {
          this.video.play().catch(function() {});
        }

        if (this.playButton && this.video) {
          this.playButton.addEventListener('click', this.handlePlayClick.bind(this));
          this.videoWrapper.addEventListener('click', this.handlePlayClick.bind(this));
        }
      }

      handlePlayClick(event) {
        if (event.target === this.playButton || event.target.closest('[data-play-button]') || event.target === this.videoWrapper) {
          event.preventDefault();

          if (this.videoCover) {
            this.videoCover.classList.add('hidden');
          }

          if (this.playButton) {
            this.playButton.classList.add('hidden');
          }

          this.video.classList.add('loaded');
          this.video.play().catch(function() {});

          this.videoWrapper.style.cursor = 'default';
        }
      }
    }

    customElements.define('collage-block-{{ ai_gen_id }}', CollageBlock{{ ai_gen_id }});
  })();
</script>

