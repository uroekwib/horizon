{% doc %}
  @prompt
    Create a Shopify section that displays blog articles in a 3-column card grid. Each card should have:
    
    A featured image on top (4:3 ratio, full width, no border radius on image itself)
    A white card body below with left-aligned title as a clickable link with underline, and a short excerpt text
    Soft card shadow and subtle border, slight lift on hover
    A "ดูทั้งหมด" button centered below the grid that links to the blog page
    
    Settings to include:
    
    blog picker to select which blog to pull articles from
    number of articles to show (default 3)
    section heading text
    show/hide excerpt toggle
    "ดูทั้งหมด" button label and link
    
    Use Horizon theme conventions with CSS variables for colors and spacing. No filter buttons needed.
    
    On mobile (below 750px): display as a horizontal swipe carousel — show 1 card at a time, full width, with previous/next arrow buttons and a page indicator (e.g. "1/3") centered below. On desktop: show as 3-column static grid.
    
    Keep code minimal and performant
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-blog-grid-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: 40px 0;
  }

  .ai-blog-grid-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-blog-grid-heading-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 40px;
    font-size: 32px;
    font-weight: 700;
    color: rgb(var(--color-foreground-heading));
  }

  .ai-blog-grid-wrapper-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 24px;
    margin-bottom: 40px;
  }

  .ai-blog-card-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    background: #ffffff;
    border: 1px solid rgba(0, 0, 0, 0.06);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    overflow: hidden;
  }

  .ai-blog-card-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.12);
  }

  .ai-blog-card-image-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 4 / 3;
    overflow: hidden;
    background: #f5f5f5;
  }

  .ai-blog-card-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-blog-card-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background: #f5f5f5;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-blog-card-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-blog-card-body-{{ ai_gen_id }} {
    padding: 20px;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .ai-blog-card-title-{{ ai_gen_id }} {
    margin: 0;
    font-size: 18px;
    font-weight: 600;
    line-height: 1.4;
  }

  .ai-blog-card-title-{{ ai_gen_id }} a {
    color: rgb(var(--color-foreground-heading));
    text-decoration: underline;
    text-decoration-thickness: 1px;
    text-underline-offset: 2px;
  }

  .ai-blog-card-title-{{ ai_gen_id }} a:hover {
    color: rgb(var(--color-primary-hover));
  }

  .ai-blog-card-excerpt-{{ ai_gen_id }} {
    font-size: 14px;
    line-height: 1.6;
    color: rgb(var(--color-foreground));
    margin: 0;
  }

  .ai-blog-grid-button-wrapper-{{ ai_gen_id }} {
    text-align: center;
  }

  .ai-blog-grid-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 12px 32px;
    background: rgb(var(--color-primary-button-background));
    color: rgb(var(--color-primary-button-text));
    border: {{ settings.primary_button_border_width }}px solid rgb(var(--color-primary-button-border));
    border-radius: {{ settings.button_border_radius_primary }}px;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.3s ease;
  }

  .ai-blog-grid-button-{{ ai_gen_id }}:hover {
    background: rgb(var(--color-primary-button-hover-background));
    color: rgb(var(--color-primary-button-hover-text));
    border-color: rgb(var(--color-primary-button-hover-border));
  }

  @media screen and (max-width: 749px) {
    .ai-blog-grid-wrapper-{{ ai_gen_id }} {
      display: block;
      position: relative;
      margin-bottom: 60px;
    }

    .ai-blog-carousel-{{ ai_gen_id }} {
      overflow: hidden;
      position: relative;
    }

    .ai-blog-carousel-track-{{ ai_gen_id }} {
      display: flex;
      transition: transform 0.3s ease;
    }

    .ai-blog-card-{{ ai_gen_id }} {
      flex: 0 0 100%;
      min-width: 100%;
    }

    .ai-blog-carousel-controls-{{ ai_gen_id }} {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 16px;
      margin-top: 20px;
    }

    .ai-blog-carousel-button-{{ ai_gen_id }} {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      background: rgb(var(--color-primary-button-background));
      color: rgb(var(--color-primary-button-text));
      border: none;
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .ai-blog-carousel-button-{{ ai_gen_id }}:hover {
      background: rgb(var(--color-primary-button-hover-background));
    }

    .ai-blog-carousel-button-{{ ai_gen_id }}:disabled {
      opacity: 0.3;
      cursor: not-allowed;
    }

    .ai-blog-carousel-indicator-{{ ai_gen_id }} {
      font-size: 14px;
      font-weight: 500;
      color: rgb(var(--color-foreground));
    }
  }

  @media screen and (min-width: 750px) {
    .ai-blog-carousel-controls-{{ ai_gen_id }} {
      display: none;
    }
  }
{% endstyle %}

<blog-grid-{{ ai_gen_id }} class="ai-blog-grid-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-blog-grid-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-blog-grid-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    {% if block.settings.blog != blank %}
      {% assign articles_to_show = block.settings.articles_count | at_most: block.settings.blog.articles.size %}
      
      <div class="ai-blog-grid-wrapper-{{ ai_gen_id }}">
        <div class="ai-blog-carousel-{{ ai_gen_id }}">
          <div class="ai-blog-carousel-track-{{ ai_gen_id }}">
            {% for article in block.settings.blog.articles limit: articles_to_show %}
              <article class="ai-blog-card-{{ ai_gen_id }}">
                <div class="ai-blog-card-image-{{ ai_gen_id }}">
                  {% if article.image %}
                    <img
                      src="{{ article.image | image_url: width: 600 }}"
                      alt="{{ article.image.alt | escape }}"
                      loading="lazy"
                      width="600"
                      height="450"
                    >
                  {% else %}
                    <div class="ai-blog-card-image-placeholder-{{ ai_gen_id }}">
                      {{ 'image' | placeholder_svg_tag }}
                    </div>
                  {% endif %}
                </div>
                <div class="ai-blog-card-body-{{ ai_gen_id }}">
                  <h3 class="ai-blog-card-title-{{ ai_gen_id }}">
                    <a href="{{ article.url }}">{{ article.title }}</a>
                  </h3>
                  {% if block.settings.show_excerpt %}
                    <p class="ai-blog-card-excerpt-{{ ai_gen_id }}">
                      {{ article.excerpt_or_content | strip_html | truncate: 120 }}
                    </p>
                  {% endif %}
                </div>
              </article>
            {% endfor %}
          </div>
        </div>

        <div class="ai-blog-carousel-controls-{{ ai_gen_id }}">
          <button
            class="ai-blog-carousel-button-{{ ai_gen_id }} ai-blog-carousel-prev-{{ ai_gen_id }}"
            aria-label="Previous article"
          >
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="15 18 9 12 15 6"></polyline>
            </svg>
          </button>
          <span class="ai-blog-carousel-indicator-{{ ai_gen_id }}">
            <span class="ai-blog-carousel-current-{{ ai_gen_id }}">1</span>/<span class="ai-blog-carousel-total-{{ ai_gen_id }}">{{ articles_to_show }}</span>
          </span>
          <button
            class="ai-blog-carousel-button-{{ ai_gen_id }} ai-blog-carousel-next-{{ ai_gen_id }}"
            aria-label="Next article"
          >
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="9 18 15 12 9 6"></polyline>
            </svg>
          </button>
        </div>
      </div>

      {% if block.settings.button_link != blank %}
        <div class="ai-blog-grid-button-wrapper-{{ ai_gen_id }}">
          <a href="{{ block.settings.button_link }}" class="ai-blog-grid-button-{{ ai_gen_id }}">
            {{ block.settings.button_label }}
          </a>
        </div>
      {% endif %}
    {% else %}
      <div style="text-align: center; padding: 60px 20px; color: #999;">
        เลือกบล็อกเพื่อแสดงบทความ
      </div>
    {% endif %}
  </div>
</blog-grid-{{ ai_gen_id }}>

<script>
  (function() {
    class BlogGrid{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentIndex = 0;
        this.totalSlides = 0;
      }

      connectedCallback() {
        this.track = this.querySelector('.ai-blog-carousel-track-{{ ai_gen_id }}');
        this.prevButton = this.querySelector('.ai-blog-carousel-prev-{{ ai_gen_id }}');
        this.nextButton = this.querySelector('.ai-blog-carousel-next-{{ ai_gen_id }}');
        this.currentIndicator = this.querySelector('.ai-blog-carousel-current-{{ ai_gen_id }}');
        this.totalIndicator = this.querySelector('.ai-blog-carousel-total-{{ ai_gen_id }}');

        if (!this.track) return;

        this.totalSlides = this.track.children.length;

        if (this.prevButton && this.nextButton) {
          this.prevButton.addEventListener('click', () => this.goToPrevious());
          this.nextButton.addEventListener('click', () => this.goToNext());
        }

        this.updateCarousel();
      }

      goToPrevious() {
        if (this.currentIndex > 0) {
          this.currentIndex--;
          this.updateCarousel();
        }
      }

      goToNext() {
        if (this.currentIndex < this.totalSlides - 1) {
          this.currentIndex++;
          this.updateCarousel();
        }
      }

      updateCarousel() {
        if (!this.track) return;

        const offset = -this.currentIndex * 100;
        this.track.style.transform = `translateX(${offset}%)`;

        if (this.currentIndicator) {
          this.currentIndicator.textContent = this.currentIndex + 1;
        }

        if (this.prevButton) {
          this.prevButton.disabled = this.currentIndex === 0;
        }

        if (this.nextButton) {
          this.nextButton.disabled = this.currentIndex === this.totalSlides - 1;
        }
      }
    }

    customElements.define('blog-grid-{{ ai_gen_id }}', BlogGrid{{ ai_gen_id }});
  })();
</script>

{% schema %}
{
  "name": "Blog article grid",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "บทความล่าสุด"
    },
    {
      "type": "blog",
      "id": "blog",
      "label": "Blog"
    },
    {
      "type": "range",
      "id": "articles_count",
      "label": "Number of articles",
      "min": 1,
      "max": 12,
      "step": 1,
      "default": 3
    },
    {
      "type": "checkbox",
      "id": "show_excerpt",
      "label": "Show excerpt",
      "default": true
    },
    {
      "type": "header",
      "content": "Button"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "ดูทั้งหมด"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    }
  ],
  "presets": [
    {
      "name": "Blog article grid"
    }
  ]
}
{% endschema %}
