{% doc %}
  @prompt
    Blog articles section. Desktop: 3-column grid. Mobile: CSS scroll-snap carousel, 1 card per slide, prev/next arrows, slide counter. Card: image top (4:3), white body, title link + excerpt, no date. "ดูทั้งหมด" link top-right of heading. Settings: blog picker, article count, heading text, button label+url. Minimal code, no JS libraries., มี except หน่อย
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-blog-articles-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: 40px 0;
  }

  .ai-blog-articles-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-blog-articles-header-{{ ai_gen_id }} {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 32px;
  }

  .ai-blog-articles-heading-{{ ai_gen_id }} {
    margin: 0;
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
  }

  .ai-blog-articles-view-all-{{ ai_gen_id }} {
    color: {{ block.settings.link_color }};
    text-decoration: none;
    font-size: 14px;
    transition: opacity 0.2s ease;
  }

  .ai-blog-articles-view-all-{{ ai_gen_id }}:hover {
    opacity: 0.7;
  }

  .ai-blog-articles-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 24px;
  }

  .ai-blog-article-card-{{ ai_gen_id }} {
    background: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    transition: transform 0.2s ease;
  }

  .ai-blog-article-card-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
  }

  .ai-blog-article-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 75%;
    overflow: hidden;
    background: #f5f5f5;
  }

  .ai-blog-article-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-blog-article-image-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #f5f5f5;
  }

  .ai-blog-article-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-blog-article-body-{{ ai_gen_id }} {
    padding: 20px;
  }

  .ai-blog-article-title-{{ ai_gen_id }} {
    margin: 0 0 12px;
    font-size: 18px;
    line-height: 1.4;
  }

  .ai-blog-article-title-link-{{ ai_gen_id }} {
    color: {{ block.settings.title_color }};
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .ai-blog-article-title-link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.link_color }};
  }

  .ai-blog-article-excerpt-{{ ai_gen_id }} {
    margin: 0;
    font-size: 14px;
    line-height: 1.6;
    color: {{ block.settings.excerpt_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-blog-articles-grid-{{ ai_gen_id }} {
      display: flex;
      overflow-x: auto;
      scroll-snap-type: x mandatory;
      gap: 16px;
      padding-bottom: 16px;
      -webkit-overflow-scrolling: touch;
      scrollbar-width: none;
    }

    .ai-blog-articles-grid-{{ ai_gen_id }}::-webkit-scrollbar {
      display: none;
    }

    .ai-blog-article-card-{{ ai_gen_id }} {
      flex: 0 0 85%;
      scroll-snap-align: start;
    }

    .ai-blog-articles-controls-{{ ai_gen_id }} {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 16px;
      margin-top: 20px;
    }

    .ai-blog-articles-nav-button-{{ ai_gen_id }} {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      border: 1px solid {{ block.settings.link_color }};
      background: {{ block.settings.card_background }};
      color: {{ block.settings.link_color }};
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      transition: all 0.2s ease;
    }

    .ai-blog-articles-nav-button-{{ ai_gen_id }}:disabled {
      opacity: 0.3;
      cursor: not-allowed;
    }

    .ai-blog-articles-nav-button-{{ ai_gen_id }}:not(:disabled):hover {
      background: {{ block.settings.link_color }};
      color: {{ block.settings.card_background }};
    }

    .ai-blog-articles-counter-{{ ai_gen_id }} {
      font-size: 14px;
      color: {{ block.settings.excerpt_color }};
    }
  }

  @media screen and (min-width: 750px) {
    .ai-blog-articles-controls-{{ ai_gen_id }} {
      display: none;
    }
  }
{% endstyle %}

<blog-articles-{{ ai_gen_id }} class="ai-blog-articles-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-blog-articles-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank or block.settings.view_all_url != blank %}
      <div class="ai-blog-articles-header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-blog-articles-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.view_all_url != blank %}
          <a href="{{ block.settings.view_all_url }}" class="ai-blog-articles-view-all-{{ ai_gen_id }}">
            {{ block.settings.view_all_label }}
          </a>
        {% endif %}
      </div>
    {% endif %}

    <div class="ai-blog-articles-grid-{{ ai_gen_id }}" data-carousel>
      {% if block.settings.blog != blank %}
        {% for article in block.settings.blog.articles limit: block.settings.article_count %}
          <article class="ai-blog-article-card-{{ ai_gen_id }}">
            <div class="ai-blog-article-image-wrapper-{{ ai_gen_id }}">
              {% if article.image %}
                <img
                  src="{{ article.image | image_url: width: 600 }}"
                  alt="{{ article.image.alt | escape }}"
                  loading="lazy"
                  width="600"
                  height="450"
                  class="ai-blog-article-image-{{ ai_gen_id }}"
                >
              {% else %}
                <div class="ai-blog-article-image-placeholder-{{ ai_gen_id }}">
                  {{ 'image' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>
            <div class="ai-blog-article-body-{{ ai_gen_id }}">
              <h3 class="ai-blog-article-title-{{ ai_gen_id }}">
                <a href="{{ article.url }}" class="ai-blog-article-title-link-{{ ai_gen_id }}">
                  {{ article.title }}
                </a>
              </h3>
              {% if article.excerpt != blank %}
                <p class="ai-blog-article-excerpt-{{ ai_gen_id }}">
                  {{ article.excerpt | strip_html | truncate: 120 }}
                </p>
              {% else %}
                <p class="ai-blog-article-excerpt-{{ ai_gen_id }}">
                  {{ article.content | strip_html | truncate: 120 }}
                </p>
              {% endif %}
            </div>
          </article>
        {% endfor %}
      {% else %}
        {% for i in (1..3) %}
          <article class="ai-blog-article-card-{{ ai_gen_id }}">
            <div class="ai-blog-article-image-wrapper-{{ ai_gen_id }}">
              <div class="ai-blog-article-image-placeholder-{{ ai_gen_id }}">
                {{ 'image' | placeholder_svg_tag }}
              </div>
            </div>
            <div class="ai-blog-article-body-{{ ai_gen_id }}">
              <h3 class="ai-blog-article-title-{{ ai_gen_id }}">
                <a href="#" class="ai-blog-article-title-link-{{ ai_gen_id }}">
                  บทความตัวอย่าง {{ i }}
                </a>
              </h3>
              <p class="ai-blog-article-excerpt-{{ ai_gen_id }}">
                เลือกบล็อกเพื่อแสดงบทความของคุณที่นี่
              </p>
            </div>
          </article>
        {% endfor %}
      {% endif %}
    </div>

    <div class="ai-blog-articles-controls-{{ ai_gen_id }}">
      <button
        class="ai-blog-articles-nav-button-{{ ai_gen_id }}"
        data-prev
        aria-label="Previous"
      >
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="15 18 9 12 15 6"></polyline>
        </svg>
      </button>
      <div class="ai-blog-articles-counter-{{ ai_gen_id }}" data-counter>
        <span data-current>1</span> / <span data-total>3</span>
      </div>
      <button
        class="ai-blog-articles-nav-button-{{ ai_gen_id }}"
        data-next
        aria-label="Next"
      >
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="9 18 15 12 9 6"></polyline>
        </svg>
      </button>
    </div>
  </div>
</blog-articles-{{ ai_gen_id }}>

<script>
  (function() {
    class BlogArticles{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.carousel = this.querySelector('[data-carousel]');
        this.prevButton = this.querySelector('[data-prev]');
        this.nextButton = this.querySelector('[data-next]');
        this.counter = this.querySelector('[data-counter]');
        this.currentSlide = 0;
      }

      connectedCallback() {
        if (!this.carousel || window.innerWidth >= 750) return;

        this.cards = Array.from(this.carousel.children);
        this.totalSlides = this.cards.length;

        if (this.counter) {
          this.counter.querySelector('[data-total]').textContent = this.totalSlides;
        }

        this.setupEventListeners();
        this.updateButtons();
      }

      setupEventListeners() {
        if (this.prevButton) {
          this.prevButton.addEventListener('click', () => this.navigate(-1));
        }

        if (this.nextButton) {
          this.nextButton.addEventListener('click', () => this.navigate(1));
        }

        this.carousel.addEventListener('scroll', () => {
          this.updateCurrentSlide();
        });
      }

      navigate(direction) {
        const newSlide = this.currentSlide + direction;
        if (newSlide >= 0 && newSlide < this.totalSlides) {
          this.cards[newSlide].scrollIntoView({
            behavior: 'smooth',
            block: 'nearest',
            inline: 'start'
          });
        }
      }

      updateCurrentSlide() {
        const scrollLeft = this.carousel.scrollLeft;
        const cardWidth = this.cards[0].offsetWidth;
        const gap = 16;
        this.currentSlide = Math.round(scrollLeft / (cardWidth + gap));
        
        if (this.counter) {
          this.counter.querySelector('[data-current]').textContent = this.currentSlide + 1;
        }
        
        this.updateButtons();
      }

      updateButtons() {
        if (this.prevButton) {
          this.prevButton.disabled = this.currentSlide === 0;
        }
        if (this.nextButton) {
          this.nextButton.disabled = this.currentSlide >= this.totalSlides - 1;
        }
      }
    }

    customElements.define('blog-articles-{{ ai_gen_id }}', BlogArticles{{ ai_gen_id }});
  })();
</script>

