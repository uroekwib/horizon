{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-blog-articles-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: 40px 20px;
  }

  .ai-blog-articles-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    width: 100%;
  }

  .ai-blog-articles-header-{{ ai_gen_id }} {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 32px;
  }

  .ai-blog-articles-heading-{{ ai_gen_id }} {
    margin: 0;
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
  }

  .ai-blog-articles-view-all-{{ ai_gen_id }} {
    color: {{ block.settings.link_color }};
    text-decoration: underline;
    font-size: 14px;
    transition: opacity 0.2s ease;
    white-space: nowrap;
  }

  .ai-blog-articles-view-all-{{ ai_gen_id }}:hover {
    opacity: 0.7;
  }

  .ai-blog-articles-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 24px;
    width: 100%;
  }

  .ai-blog-article-card-{{ ai_gen_id }} {
    background: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    transition: transform 0.2s ease;
  }

  .ai-blog-article-card-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
  }

  .ai-blog-article-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 75%;
    overflow: hidden;
    background: #f5f5f5;
  }

  .ai-blog-article-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-blog-article-image-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #f5f5f5;
  }

  .ai-blog-article-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-blog-article-body-{{ ai_gen_id }} {
    padding: 20px 0;
  }

  .ai-blog-article-title-{{ ai_gen_id }} {
    margin: 0 0 12px;
    font-size: 18px;
    line-height: 1.4;
  }

  .ai-blog-article-title-link-{{ ai_gen_id }} {
    color: {{ block.settings.title_color }};
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .ai-blog-article-title-link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.link_color }};
  }

  .ai-blog-article-excerpt-{{ ai_gen_id }} {
    margin: 0;
    font-size: 14px;
    line-height: 1.6;
    color: {{ block.settings.excerpt_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-blog-articles-{{ ai_gen_id }} {
      padding: 32px 0;
    }

    .ai-blog-articles-header-{{ ai_gen_id }} {
      margin-bottom: 24px;
    }

    .ai-blog-articles-heading-{{ ai_gen_id }} {
      font-size: 24px;
    }

    .ai-blog-articles-grid-{{ ai_gen_id }} {
      display: flex;
      overflow-x: auto;
      scroll-snap-type: x mandatory;
      gap: 16px;
      padding: 0 0 8px;
      -webkit-overflow-scrolling: touch;
      scrollbar-width: none;
      -ms-overflow-style: none;
    }

    .ai-blog-articles-grid-{{ ai_gen_id }}::-webkit-scrollbar {
      display: none;
    }

    .ai-blog-article-card-{{ ai_gen_id }} {
      flex: 0 0 85%;
      max-width: 340px;
      scroll-snap-align: start;
    }

    .ai-blog-article-title-{{ ai_gen_id }} {
      font-size: 16px;
      margin-bottom: 8px;
    }

    .ai-blog-article-excerpt-{{ ai_gen_id }} {
      font-size: 13px;
    }
  }
{% endstyle %}

<div class="ai-blog-articles-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-blog-articles-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank or block.settings.view_all_url != blank %}
      <div class="ai-blog-articles-header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-blog-articles-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.view_all_url != blank %}
          <a href="{{ block.settings.view_all_url }}" class="ai-blog-articles-view-all-{{ ai_gen_id }}">
            {{ block.settings.view_all_label }}
          </a>
        {% endif %}
      </div>
    {% endif %}

    <div class="ai-blog-articles-grid-{{ ai_gen_id }}">
      {% if block.settings.blog != blank %}
        {% for article in block.settings.blog.articles limit: 3 %}
          <article class="ai-blog-article-card-{{ ai_gen_id }}">
            <div class="ai-blog-article-image-wrapper-{{ ai_gen_id }}">
              {% if article.image %}
                <img
                  src="{{ article.image | image_url: width: 600 }}"
                  alt="{{ article.image.alt | escape }}"
                  loading="lazy"
                  width="600"
                  height="450"
                  class="ai-blog-article-image-{{ ai_gen_id }}"
                >
              {% else %}
                <div class="ai-blog-article-image-placeholder-{{ ai_gen_id }}">
                  {{ 'image' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>
            <div class="ai-blog-article-body-{{ ai_gen_id }}">
              <h3 class="ai-blog-article-title-{{ ai_gen_id }}">
                <a href="{{ article.url }}" class="ai-blog-article-title-link-{{ ai_gen_id }}">
                  {{ article.title }}
                </a>
              </h3>
              {% if article.excerpt != blank %}
                <p class="ai-blog-article-excerpt-{{ ai_gen_id }}">
                  {{ article.excerpt | strip_html | truncate: 120 }}
                </p>
              {% else %}
                <p class="ai-blog-article-excerpt-{{ ai_gen_id }}">
                  {{ article.content | strip_html | truncate: 120 }}
                </p>
              {% endif %}
            </div>
          </article>
        {% endfor %}
      {% else %}
        {% for i in (1..3) %}
          <article class="ai-blog-article-card-{{ ai_gen_id }}">
            <div class="ai-blog-article-image-wrapper-{{ ai_gen_id }}">
              <div class="ai-blog-article-image-placeholder-{{ ai_gen_id }}">
                {{ 'image' | placeholder_svg_tag }}
              </div>
            </div>
            <div class="ai-blog-article-body-{{ ai_gen_id }}">
              <h3 class="ai-blog-article-title-{{ ai_gen_id }}">
                <a href="#" class="ai-blog-article-title-link-{{ ai_gen_id }}">
                  บทความตัวอย่าง {{ i }}
                </a>
              </h3>
              <p class="ai-blog-article-excerpt-{{ ai_gen_id }}">
                เลือกบล็อกเพื่อแสดงบทความของคุณที่นี่
              </p>
            </div>
          </article>
        {% endfor %}
      {% endif %}
    </div>
  </div>
</div>

