<script>
  (function() {
    class BlogFilter{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.postsPerPage = {{ block.settings.posts_per_page }};
        this.currentPage = 1;
        this.currentFilter = 'all';
      }

      connectedCallback() {
        this.filterButtons = this.querySelectorAll('.ai-blog-filter__button-{{ ai_gen_id }}');
        this.posts = this.querySelectorAll('.ai-blog-filter__post-{{ ai_gen_id }}');
        this.loadMoreButton = this.querySelector('.ai-blog-filter__load-more-button-{{ ai_gen_id }}');
        
        this.setupEventListeners();
        this.showInitialPosts();
      }

      setupEventListeners() {
        this.filterButtons.forEach(button => {
          button.addEventListener('click', () => {
            this.handleFilterClick(button);
          });
        });

        if (this.loadMoreButton) {
          this.loadMoreButton.addEventListener('click', () => {
            this.loadMorePosts();
          });
        }
      }

      handleFilterClick(button) {
        this.filterButtons.forEach(btn => btn.classList.remove('active'));
        button.classList.add('active');
        
        this.currentFilter = button.dataset.filter;
        this.currentPage = 1;
        
        this.filterPosts();
      }

      filterPosts() {
        const filteredPosts = Array.from(this.posts).filter(post => {
          if (this.currentFilter === 'all') return true;
          return post.dataset.blog === this.currentFilter;
        });

        this.posts.forEach(post => {
          post.classList.remove('visible');
          post.classList.add('hidden');
        });

        const postsToShow = filteredPosts.slice(0, this.postsPerPage * this.currentPage);
        
        postsToShow.forEach((post, index) => {
          setTimeout(() => {
            post.classList.remove('hidden');
            post.classList.add('visible');
          }, index * 50);
        });

        if (this.loadMoreButton) {
          if (filteredPosts.length > postsToShow.length) {
            this.loadMoreButton.classList.remove('hidden');
          } else {
            this.loadMoreButton.classList.add('hidden');
          }
        }
      }

      loadMorePosts() {
        this.currentPage++;
        this.filterPosts();
      }

      showInitialPosts() {
        this.filterPosts();
      }
    }

    customElements.define('blog-filter-{{ ai_gen_id }}', BlogFilter{{ ai_gen_id }});
  })();
</script>

