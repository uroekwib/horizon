{% doc %}
  @prompt
    blog filter please there are 3 categories
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-blog-filter-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    padding: {{ block.settings.padding }}px 0;
  }

  .ai-blog-filter-container-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .ai-blog-filter-heading-{{ ai_gen_id }} {
    margin: 0;
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.text_color }};
  }

  .ai-blog-filter-buttons-{{ ai_gen_id }} {
    display: flex;
    flex-wrap: wrap;
    gap: {{ block.settings.button_gap }}px;
  }

  .ai-blog-filter-button-{{ ai_gen_id }} {
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
    display: inline-block;
  }

  .ai-blog-filter-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border_color }};
  }

  .ai-blog-filter-button-{{ ai_gen_id }}.active {
    background-color: {{ block.settings.button_active_background }};
    color: {{ block.settings.button_active_text_color }};
    border-color: {{ block.settings.button_active_border_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-blog-filter-{{ ai_gen_id }} {
      width: 100%;
    }

    .ai-blog-filter-buttons-{{ ai_gen_id }} {
      gap: {{ block.settings.button_gap | times: 0.8 }}px;
    }

    .ai-blog-filter-button-{{ ai_gen_id }} {
      padding: {{ block.settings.button_padding_vertical | times: 0.8 }}px {{ block.settings.button_padding_horizontal | times: 0.8 }}px;
      font-size: {{ block.settings.button_font_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<blog-filter-{{ ai_gen_id }} class="ai-blog-filter-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-blog-filter-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h3 class="ai-blog-filter-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h3>
    {% endif %}

    <div class="ai-blog-filter-buttons-{{ ai_gen_id }}">
      <a
        href="{{ blog.url }}"
        class="ai-blog-filter-button-{{ ai_gen_id }} {% unless current_tags %}active{% endunless %}"
        data-filter="all"
      >
        {{ block.settings.all_label }}
      </a>

      {% if block.settings.category_1 != blank %}
        {% assign tag_1 = block.settings.category_1 %}
        <a
          href="{{ blog.url }}/tagged/{{ tag_1 | handle }}"
          class="ai-blog-filter-button-{{ ai_gen_id }} {% if current_tags contains tag_1 %}active{% endif %}"
          data-filter="{{ tag_1 | handle }}"
        >
          {{ tag_1 }}
        </a>
      {% endif %}

      {% if block.settings.category_2 != blank %}
        {% assign tag_2 = block.settings.category_2 %}
        <a
          href="{{ blog.url }}/tagged/{{ tag_2 | handle }}"
          class="ai-blog-filter-button-{{ ai_gen_id }} {% if current_tags contains tag_2 %}active{% endif %}"
          data-filter="{{ tag_2 | handle }}"
        >
          {{ tag_2 }}
        </a>
      {% endif %}

      {% if block.settings.category_3 != blank %}
        {% assign tag_3 = block.settings.category_3 %}
        <a
          href="{{ blog.url }}/tagged/{{ tag_3 | handle }}"
          class="ai-blog-filter-button-{{ ai_gen_id }} {% if current_tags contains tag_3 %}active{% endif %}"
          data-filter="{{ tag_3 | handle }}"
        >
          {{ tag_3 }}
        </a>
      {% endif %}
    </div>
  </div>
</blog-filter-{{ ai_gen_id }}>

<script>
  (function() {
    class BlogFilter{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.buttons = this.querySelectorAll('.ai-blog-filter-button-{{ ai_gen_id }}');
        this.setupEventListeners();
      }

      setupEventListeners() {
        this.buttons.forEach((button) => {
          button.addEventListener('click', (e) => {
            this.buttons.forEach((btn) => btn.classList.remove('active'));
            button.classList.add('active');
          });
        });
      }
    }

    customElements.define('blog-filter-{{ ai_gen_id }}', BlogFilter{{ ai_gen_id }});
  })();
</script>

