{% style %}
  .ai-hero-container-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    min-height: {{ block.settings.min_height }}px;
    position: relative;
    overflow: hidden;
    background: linear-gradient(90deg, #ECFEFF 0%, #EEF2FF 50%, #F5F3FF 100%);
  }

  .ai-hero-container-{{ ai_gen_id }}::before,
  .ai-hero-container-{{ ai_gen_id }}::after,
  .ai-hero-glow-{{ ai_gen_id }} {
    content: '';
    position: absolute;
    border-radius: 50%;
    pointer-events: none;
    opacity: 0.4;
    filter: blur(80px);
  }

  .ai-hero-container-{{ ai_gen_id }}::before {
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, #22D3C8 0%, transparent 70%);
    top: 50%;
    left: 0;
    transform: translateY(-50%);
  }

  .ai-hero-container-{{ ai_gen_id }}::after {
    width: 350px;
    height: 350px;
    background: radial-gradient(circle, #A78BFA 0%, transparent 70%);
    top: 10%;
    right: 10%;
  }

  .ai-hero-glow-{{ ai_gen_id }} {
    width: 300px;
    height: 300px;
    background: radial-gradient(circle, #818CF8 0%, transparent 70%);
    bottom: 10%;
    left: 50%;
    transform: translateX(-50%);
  }

  .ai-hero-wrapper-{{ ai_gen_id }} {
    max-width: 1400px;
    margin: 0 auto;
    padding: {{ block.settings.padding_top }}px {{ block.settings.padding_horizontal }}px {{ block.settings.padding_bottom }}px;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
    position: relative;
    z-index: 1;
  }

  .ai-hero-content-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  .ai-hero-heading-{{ ai_gen_id }} {
    font-family: 'Noto Sans Thai', sans-serif;
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 700;
    line-height: 1.2;
    color: {{ block.settings.heading_color }};
    margin: 0;
  }

  .ai-hero-heading-{{ ai_gen_id }} em {
    font-style: normal;
    background: linear-gradient(90deg, #22D3C8, #818CF8, #A78BFA);
    background-size: 300%;
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    color: transparent;
    animation: ai-hero-gradient-move-{{ ai_gen_id }} 4s linear infinite;
  }

  @keyframes ai-hero-gradient-move-{{ ai_gen_id }} {
    0% { background-position: 0%; }
    100% { background-position: 300%; }
  }

  .ai-hero-subheading-{{ ai_gen_id }} {
    font-family: 'Noto Sans Thai', sans-serif;
    font-size: {{ block.settings.subheading_size }}px;
    line-height: 1.6;
    color: {{ block.settings.subheading_color }};
    margin: 0;
  }

  .ai-hero-buttons-{{ ai_gen_id }} {
    display: flex;
    gap: 16px;
    flex-wrap: wrap;
  }

  .ai-hero-button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 12px 28px;
    font-family: 'Noto Sans Thai', sans-serif;
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: 600;
    text-decoration: none;
    border-radius: 100px;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
  }

  .ai-hero-button-primary-{{ ai_gen_id }} {
    background: linear-gradient(90deg, #22D3C8, #818CF8, #A78BFA);
    color: #ffffff;
  }

  .ai-hero-button-primary-{{ ai_gen_id }}:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(34, 211, 200, 0.3);
  }

  .ai-hero-button-secondary-{{ ai_gen_id }} {
    background: #ffffff;
    color: {{ block.settings.heading_color }};
    border: 1px solid rgba(0, 0, 0, 0.1);
  }

  .ai-hero-button-secondary-{{ ai_gen_id }}:hover {
    background: rgba(255, 255, 255, 0.9);
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
  }

  .ai-hero-divider-{{ ai_gen_id }} {
    width: 100%;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(0, 0, 0, 0.1), transparent);
  }

  .ai-hero-stats-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 24px;
  }

  .ai-hero-stat-{{ ai_gen_id }} {
    text-align: left;
  }

  .ai-hero-stat-number-{{ ai_gen_id }} {
    font-family: 'Noto Sans Thai', sans-serif;
    font-size: {{ block.settings.stat_number_size }}px;
    font-weight: 700;
    color: {{ block.settings.heading_color }};
    margin: 0 0 4px 0;
  }

  .ai-hero-stat-label-{{ ai_gen_id }} {
    font-family: 'Noto Sans Thai', sans-serif;
    font-size: {{ block.settings.stat_label_size }}px;
    color: {{ block.settings.subheading_color }};
    margin: 0;
  }

  .ai-hero-bento-{{ ai_gen_id }} {
    position: relative;
    height: 100%;
    min-height: {{ block.settings.bento_min_height }}px;
    overflow: hidden;
  }

  .ai-hero-bento-track-{{ ai_gen_id }} {
    display: flex;
    gap: 16px;
    animation: ai-hero-scroll-{{ ai_gen_id }} {{ block.settings.scroll_speed }}s linear infinite;
  }

  @keyframes ai-hero-scroll-{{ ai_gen_id }} {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }

  .ai-hero-bento-column-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 16px;
    flex-shrink: 0;
  }

  .ai-hero-card-{{ ai_gen_id }} {
    background: rgba(255, 255, 255, 0.7);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.8);
    border-radius: 20px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    overflow: hidden;
    position: relative;
  }

  .ai-hero-card-tall-{{ ai_gen_id }} {
    width: {{ block.settings.card_width }}px;
    height: {{ block.settings.card_tall_height }}px;
  }

  .ai-hero-card-half-{{ ai_gen_id }} {
    width: {{ block.settings.card_width }}px;
    height: calc(({{ block.settings.card_tall_height }}px - 16px) / 2);
  }

  .ai-hero-card-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-hero-card-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #f5f5f5 0%, #e0e0e0 100%);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-hero-card-placeholder-{{ ai_gen_id }} svg {
    width: 40%;
    height: 40%;
    opacity: 0.3;
  }

  .ai-hero-bento-{{ ai_gen_id }}::before,
  .ai-hero-bento-{{ ai_gen_id }}::after {
    content: '';
    position: absolute;
    top: 0;
    bottom: 0;
    width: 100px;
    z-index: 2;
    pointer-events: none;
  }

  .ai-hero-bento-{{ ai_gen_id }}::before {
    left: 0;
    background: linear-gradient(90deg, #ECFEFF 0%, transparent 100%);
  }

  .ai-hero-bento-{{ ai_gen_id }}::after {
    right: 0;
    background: linear-gradient(270deg, #F5F3FF 0%, transparent 100%);
  }

  @media screen and (max-width: 989px) {
    .ai-hero-wrapper-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .ai-hero-heading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.7);
    }

    .ai-hero-subheading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.subheading_size }}px * 0.9);
    }

    .ai-hero-stats-{{ ai_gen_id }} {
      grid-template-columns: repeat(3, 1fr);
      gap: 16px;
    }

    .ai-hero-stat-number-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.stat_number_size }}px * 0.8);
    }

    .ai-hero-bento-{{ ai_gen_id }} {
      min-height: 300px;
    }

    .ai-hero-card-tall-{{ ai_gen_id }} {
      width: calc({{ block.settings.card_width }}px * 0.8);
      height: calc({{ block.settings.card_tall_height }}px * 0.8);
    }

    .ai-hero-card-half-{{ ai_gen_id }} {
      width: calc({{ block.settings.card_width }}px * 0.8);
      height: calc(({{ block.settings.card_tall_height }}px * 0.8 - 16px) / 2);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-hero-buttons-{{ ai_gen_id }} {
      flex-direction: column;
    }

    .ai-hero-button-{{ ai_gen_id }} {
      width: 100%;
    }
  }
{% endstyle %}

<ai-hero-{{ ai_gen_id }} class="ai-hero-container-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-hero-glow-{{ ai_gen_id }}"></div>
  
  <div class="ai-hero-wrapper-{{ ai_gen_id }}">
    <div class="ai-hero-content-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h1 class="ai-hero-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h1>
      {% endif %}

      {% if block.settings.subheading != blank %}
        <p class="ai-hero-subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</p>
      {% endif %}

      <div class="ai-hero-buttons-{{ ai_gen_id }}">
        {% if block.settings.button_primary_text != blank %}
          <a href="{{ block.settings.button_primary_link }}" class="ai-hero-button-{{ ai_gen_id }} ai-hero-button-primary-{{ ai_gen_id }}">
            {{ block.settings.button_primary_text }}
          </a>
        {% endif %}

        {% if block.settings.button_secondary_text != blank %}
          <a href="{{ block.settings.button_secondary_link }}" class="ai-hero-button-{{ ai_gen_id }} ai-hero-button-secondary-{{ ai_gen_id }}">
            {{ block.settings.button_secondary_text }}
          </a>
        {% endif %}
      </div>

      <div class="ai-hero-divider-{{ ai_gen_id }}"></div>

      <div class="ai-hero-stats-{{ ai_gen_id }}">
        <div class="ai-hero-stat-{{ ai_gen_id }}">
          <div class="ai-hero-stat-number-{{ ai_gen_id }}">{{ block.settings.stat_1_number }}</div>
          <div class="ai-hero-stat-label-{{ ai_gen_id }}">{{ block.settings.stat_1_label }}</div>
        </div>
        <div class="ai-hero-stat-{{ ai_gen_id }}">
          <div class="ai-hero-stat-number-{{ ai_gen_id }}">{{ block.settings.stat_2_number }}</div>
          <div class="ai-hero-stat-label-{{ ai_gen_id }}">{{ block.settings.stat_2_label }}</div>
        </div>
        <div class="ai-hero-stat-{{ ai_gen_id }}">
          <div class="ai-hero-stat-number-{{ ai_gen_id }}">{{ block.settings.stat_3_number }}</div>
          <div class="ai-hero-stat-label-{{ ai_gen_id }}">{{ block.settings.stat_3_label }}</div>
        </div>
      </div>
    </div>

    <div class="ai-hero-bento-{{ ai_gen_id }}">
      <div class="ai-hero-bento-track-{{ ai_gen_id }}">
        {% for i in (1..2) %}
          <div class="ai-hero-bento-column-{{ ai_gen_id }}">
            <div class="ai-hero-card-{{ ai_gen_id }} ai-hero-card-tall-{{ ai_gen_id }}">
              {% assign card_key = 'card_' | append: forloop.index | append: '_image' %}
              {% assign card_image = block.settings[card_key] %}
              {% if card_image %}
                <img src="{{ card_image | image_url: width: 400 }}" alt="{{ card_image.alt | escape }}" class="ai-hero-card-image-{{ ai_gen_id }}" loading="lazy">
              {% else %}
                <div class="ai-hero-card-placeholder-{{ ai_gen_id }}">
                  {{ 'product-1' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>
          </div>

          <div class="ai-hero-bento-column-{{ ai_gen_id }}">
            {% assign card_top_key = 'card_' | append: forloop.index | append: '_top_image' %}
            {% assign card_bottom_key = 'card_' | append: forloop.index | append: '_bottom_image' %}
            {% assign card_top_image = block.settings[card_top_key] %}
            {% assign card_bottom_image = block.settings[card_bottom_key] %}
            
            <div class="ai-hero-card-{{ ai_gen_id }} ai-hero-card-half-{{ ai_gen_id }}">
              {% if card_top_image %}
                <img src="{{ card_top_image | image_url: width: 400 }}" alt="{{ card_top_image.alt | escape }}" class="ai-hero-card-image-{{ ai_gen_id }}" loading="lazy">
              {% else %}
                <div class="ai-hero-card-placeholder-{{ ai_gen_id }}">
                  {{ 'product-2' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>
            <div class="ai-hero-card-{{ ai_gen_id }} ai-hero-card-half-{{ ai_gen_id }}">
              {% if card_bottom_image %}
                <img src="{{ card_bottom_image | image_url: width: 400 }}" alt="{{ card_bottom_image.alt | escape }}" class="ai-hero-card-image-{{ ai_gen_id }}" loading="lazy">
              {% else %}
                <div class="ai-hero-card-placeholder-{{ ai_gen_id }}">
                  {{ 'product-3' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</ai-hero-{{ ai_gen_id }}>

<script>
  (function() {
    class AiHero{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.setupInfiniteScroll();
      }

      setupInfiniteScroll() {
        const track = this.querySelector('.ai-hero-bento-track-{{ ai_gen_id }}');
        if (!track) return;

        track.addEventListener('mouseenter', () => {
          track.style.animationPlayState = 'paused';
        });

        track.addEventListener('mouseleave', () => {
          track.style.animationPlayState = 'running';
        });
      }
    }

    customElements.define('ai-hero-{{ ai_gen_id }}', AiHero{{ ai_gen_id }});
  })();
</script>

