{% style %}
  .ai-hero-saas-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    position: relative;
    overflow: hidden;
  }

  .ai-hero-saas-container-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
    padding: {{ block.settings.section_padding_top }}px {{ block.settings.section_padding_horizontal }}px {{ block.settings.section_padding_bottom }}px;
    max-width: 1400px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  .ai-hero-saas-left-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  .ai-hero-saas-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    line-height: 1.1;
    font-weight: 700;
    color: {{ block.settings.heading_color }};
    margin: 0;
    font-family: 'Noto Sans Thai', sans-serif;
  }

  .ai-hero-saas-heading-{{ ai_gen_id }} em {
    font-style: normal;
    background: linear-gradient(90deg, #22D3C8, #818CF8, #A78BFA);
    background-size: 300%;
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    color: transparent;
    animation: ai-hero-saas-gradient-move-{{ ai_gen_id }} 4s linear infinite;
  }

  @keyframes ai-hero-saas-gradient-move-{{ ai_gen_id }} {
    0% { background-position: 0%; }
    100% { background-position: 300%; }
  }

  .ai-hero-saas-buttons-{{ ai_gen_id }} {
    display: flex;
    gap: 16px;
    flex-wrap: wrap;
  }

  .ai-hero-saas-button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 12px 28px;
    font-size: 15px;
    font-weight: 600;
    text-decoration: none;
    border-radius: 100px;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
  }

  .ai-hero-saas-button-primary-{{ ai_gen_id }} {
    background: linear-gradient(135deg, #22D3C8, #818CF8, #A78BFA);
    color: #ffffff;
  }

  .ai-hero-saas-button-primary-{{ ai_gen_id }}:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(34, 211, 200, 0.3);
  }

  .ai-hero-saas-button-secondary-{{ ai_gen_id }} {
    background: #ffffff;
    color: #333333;
    border: 1px solid rgba(0, 0, 0, 0.1);
  }

  .ai-hero-saas-button-secondary-{{ ai_gen_id }}:hover {
    background: #f5f5f5;
    border-color: rgba(0, 0, 0, 0.2);
  }

  .ai-hero-saas-divider-{{ ai_gen_id }} {
    width: 100%;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(0, 0, 0, 0.1), transparent);
  }

  .ai-hero-saas-stats-{{ ai_gen_id }} {
    display: flex;
    gap: 40px;
    flex-wrap: wrap;
  }

  .ai-hero-saas-stat-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .ai-hero-saas-stat-number-{{ ai_gen_id }} {
    font-size: 28px;
    font-weight: 700;
    color: {{ block.settings.stat_number_color }};
    line-height: 1;
  }

  .ai-hero-saas-stat-label-{{ ai_gen_id }} {
    font-size: 13px;
    color: {{ block.settings.stat_label_color }};
    opacity: 0.7;
  }

  .ai-hero-saas-right-{{ ai_gen_id }} {
    position: relative;
    height: 100%;
    min-height: 320px;
    display: flex;
    align-items: center;
  }

  .ai-hero-saas-bento-wrapper-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    position: relative;
    overflow: hidden;
    mask-image: linear-gradient(to right, transparent 0%, black 10%, black 90%, transparent 100%);
    -webkit-mask-image: linear-gradient(to right, transparent 0%, black 10%, black 90%, transparent 100%);
  }

  .ai-hero-saas-bento-belt-{{ ai_gen_id }} {
    display: flex;
    gap: 16px;
    animation: ai-hero-saas-scroll-{{ ai_gen_id }} {{ block.settings.scroll_speed }}s linear infinite;
  }

  @keyframes ai-hero-saas-scroll-{{ ai_gen_id }} {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }

  .ai-hero-saas-bento-column-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 16px;
    flex-shrink: 0;
  }

  .ai-hero-saas-card-{{ ai_gen_id }} {
    background: rgba(255, 255, 255, 0.7);
    backdrop-filter: blur(10px);
    border-radius: 20px;
    border: 1px solid rgba(255, 255, 255, 0.5);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08);
    overflow: hidden;
    position: relative;
  }

  .ai-hero-saas-card-tall-{{ ai_gen_id }} {
    width: {{ block.settings.card_width }}px;
    height: {{ block.settings.card_tall_height }}px;
  }

  .ai-hero-saas-card-half-{{ ai_gen_id }} {
    width: {{ block.settings.card_width }}px;
    height: calc(({{ block.settings.card_tall_height }}px - 16px) / 2);
  }

  .ai-hero-saas-card-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-hero-saas-card-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #f5f5f5, #e0e0e0);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-hero-saas-card-placeholder-{{ ai_gen_id }} svg {
    width: 40%;
    height: 40%;
    opacity: 0.3;
  }

  @media screen and (max-width: 989px) {
    .ai-hero-saas-container-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 40px;
      padding: {{ block.settings.section_padding_top | times: 0.7 }}px {{ block.settings.section_padding_horizontal | times: 0.7 }}px {{ block.settings.section_padding_bottom | times: 0.7 }}px;
    }

    .ai-hero-saas-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.7 }}px;
    }

    .ai-hero-saas-stat-number-{{ ai_gen_id }} {
      font-size: 24px;
    }

    .ai-hero-saas-right-{{ ai_gen_id }} {
      min-height: 280px;
    }
  }

  @media screen and (max-width: 749px) {
    .ai-hero-saas-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.5 }}px;
    }

    .ai-hero-saas-buttons-{{ ai_gen_id }} {
      flex-direction: column;
    }

    .ai-hero-saas-button-{{ ai_gen_id }} {
      width: 100%;
    }

    .ai-hero-saas-stats-{{ ai_gen_id }} {
      gap: 24px;
    }

    .ai-hero-saas-right-{{ ai_gen_id }} {
      min-height: 240px;
    }
  }
{% endstyle %}

<saas-hero-{{ ai_gen_id }} class="ai-hero-saas-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-hero-saas-container-{{ ai_gen_id }}">
    <div class="ai-hero-saas-left-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h1 class="ai-hero-saas-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h1>
      {% endif %}

      <div class="ai-hero-saas-buttons-{{ ai_gen_id }}">
        {% if block.settings.button_primary_text != blank %}
          <a href="{{ block.settings.button_primary_link }}" class="ai-hero-saas-button-{{ ai_gen_id }} ai-hero-saas-button-primary-{{ ai_gen_id }}">
            {{ block.settings.button_primary_text }}
          </a>
        {% endif %}

        {% if block.settings.button_secondary_text != blank %}
          <a href="{{ block.settings.button_secondary_link }}" class="ai-hero-saas-button-{{ ai_gen_id }} ai-hero-saas-button-secondary-{{ ai_gen_id }}">
            {{ block.settings.button_secondary_text }}
          </a>
        {% endif %}
      </div>

      <div class="ai-hero-saas-divider-{{ ai_gen_id }}"></div>

      <div class="ai-hero-saas-stats-{{ ai_gen_id }}">
        {% if block.settings.stat_1_number != blank %}
          <div class="ai-hero-saas-stat-{{ ai_gen_id }}">
            <div class="ai-hero-saas-stat-number-{{ ai_gen_id }}">{{ block.settings.stat_1_number }}</div>
            <div class="ai-hero-saas-stat-label-{{ ai_gen_id }}">{{ block.settings.stat_1_label }}</div>
          </div>
        {% endif %}

        {% if block.settings.stat_2_number != blank %}
          <div class="ai-hero-saas-stat-{{ ai_gen_id }}">
            <div class="ai-hero-saas-stat-number-{{ ai_gen_id }}">{{ block.settings.stat_2_number }}</div>
            <div class="ai-hero-saas-stat-label-{{ ai_gen_id }}">{{ block.settings.stat_2_label }}</div>
          </div>
        {% endif %}

        {% if block.settings.stat_3_number != blank %}
          <div class="ai-hero-saas-stat-{{ ai_gen_id }}">
            <div class="ai-hero-saas-stat-number-{{ ai_gen_id }}">{{ block.settings.stat_3_number }}</div>
            <div class="ai-hero-saas-stat-label-{{ ai_gen_id }}">{{ block.settings.stat_3_label }}</div>
          </div>
        {% endif %}
      </div>
    </div>

    <div class="ai-hero-saas-right-{{ ai_gen_id }}">
      <div class="ai-hero-saas-bento-wrapper-{{ ai_gen_id }}">
        <div class="ai-hero-saas-bento-belt-{{ ai_gen_id }}">
          {% for i in (1..2) %}
            {% for col in (1..6) %}
              <div class="ai-hero-saas-bento-column-{{ ai_gen_id }}">
                {% if col == 1 or col == 3 or col == 5 %}
                  {% assign card_key = 'card_' | append: col %}
                  {% assign card_image = block.settings[card_key] %}
                  <div class="ai-hero-saas-card-{{ ai_gen_id }} ai-hero-saas-card-tall-{{ ai_gen_id }}">
                    {% if card_image %}
                      <img src="{{ card_image | image_url: width: 400 }}" alt="{{ card_image.alt | escape }}" class="ai-hero-saas-card-image-{{ ai_gen_id }}" loading="lazy">
                    {% else %}
                      <div class="ai-hero-saas-card-placeholder-{{ ai_gen_id }}">
                        {{ 'product-1' | placeholder_svg_tag }}
                      </div>
                    {% endif %}
                  </div>
                {% else %}
                  {% assign card_top_key = 'card_' | append: col | append: '_top' %}
                  {% assign card_bottom_key = 'card_' | append: col | append: '_bottom' %}
                  {% assign card_top_image = block.settings[card_top_key] %}
                  {% assign card_bottom_image = block.settings[card_bottom_key] %}
                  
                  <div class="ai-hero-saas-card-{{ ai_gen_id }} ai-hero-saas-card-half-{{ ai_gen_id }}">
                    {% if card_top_image %}
                      <img src="{{ card_top_image | image_url: width: 400 }}" alt="{{ card_top_image.alt | escape }}" class="ai-hero-saas-card-image-{{ ai_gen_id }}" loading="lazy">
                    {% else %}
                      <div class="ai-hero-saas-card-placeholder-{{ ai_gen_id }}">
                        {{ 'product-1' | placeholder_svg_tag }}
                      </div>
                    {% endif %}
                  </div>
                  
                  <div class="ai-hero-saas-card-{{ ai_gen_id }} ai-hero-saas-card-half-{{ ai_gen_id }}">
                    {% if card_bottom_image %}
                      <img src="{{ card_bottom_image | image_url: width: 400 }}" alt="{{ card_bottom_image.alt | escape }}" class="ai-hero-saas-card-image-{{ ai_gen_id }}" loading="lazy">
                    {% else %}
                      <div class="ai-hero-saas-card-placeholder-{{ ai_gen_id }}">
                        {{ 'product-1' | placeholder_svg_tag }}
                      </div>
                    {% endif %}
                  </div>
                {% endif %}
              </div>
            {% endfor %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</saas-hero-{{ ai_gen_id }}>

<script>
  (function() {
    class SaasHero{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        const belt = this.querySelector('.ai-hero-saas-bento-belt-{{ ai_gen_id }}');
        if (!belt) return;

        belt.addEventListener('mouseenter', () => {
          belt.style.animationPlayState = 'paused';
        });

        belt.addEventListener('mouseleave', () => {
          belt.style.animationPlayState = 'running';
        });
      }
    }

    customElements.define('saas-hero-{{ ai_gen_id }}', SaasHero{{ ai_gen_id }});
  })();
</script>

