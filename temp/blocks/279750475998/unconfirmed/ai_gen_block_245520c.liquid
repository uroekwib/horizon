    display: flex;
    flex-direction: column;
    gap: 20px;
    flex-shrink: 0;
  }

  .ai-saas-hero-card-{{ ai_gen_id }} {
    background: rgba(255, 255, 255, 0.7);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.5);
    border-radius: 20px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    width: 220px;
    position: relative;
  }

  .ai-saas-hero-card-tall-{{ ai_gen_id }} {
    height: 380px;
  }

  .ai-saas-hero-card-half-{{ ai_gen_id }} {
    height: 180px;
  }

  .ai-saas-hero-card-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-saas-hero-card-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f0f0f0;
  }

  .ai-saas-hero-card-image-placeholder-{{ ai_gen_id }} svg {
    width: 60px;
    height: 60px;
    opacity: 0.3;
  }

