    }

    .ai-saas-hero-buttons-{{ ai_gen_id }} {
      flex-direction: column;
    }

    .ai-saas-hero-cta-primary-{{ ai_gen_id }},
    .ai-saas-hero-cta-secondary-{{ ai_gen_id }} {
      width: 100%;
      justify-content: center;
    }

    .ai-saas-hero-stats-{{ ai_gen_id }} {
      grid-template-columns: repeat(3, 1fr);
      gap: 16px;
    }

    .ai-saas-hero-stat-value-{{ ai_gen_id }} {
      font-size: 24px;
    }

    .ai-saas-hero-stat-label-{{ ai_gen_id }} {
      font-size: 12px;
    }

    .ai-saas-hero-carousel-{{ ai_gen_id }} {
      min-height: 320px;
    }

    .ai-saas-hero-card-{{ ai_gen_id }} {
      width: 140px;
    }

    .ai-saas-hero-card-tall-{{ ai_gen_id }} {
      height: 240px;
    }

    .ai-saas-hero-card-half-{{ ai_gen_id }} {
      height: 110px;
    }

    .ai-saas-hero-card-image-placeholder-{{ ai_gen_id }} svg {
      width: 40px;
      height: 40px;
    }
  }
