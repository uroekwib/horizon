            <div class="ai-hero-stat-label-{{ ai_gen_id }}">{{ block.settings.stat_3_label }}</div>
          </div>
        {% endif %}
      </div>
    </div>

    <div class="ai-hero-right-{{ ai_gen_id }}">
      <div class="ai-hero-bento-wrapper-{{ ai_gen_id }}">
        <div class="ai-hero-bento-scroll-{{ ai_gen_id }}">
          <div class="ai-hero-bento-column-{{ ai_gen_id }}">
            {% for i in (1..6) %}
              {% liquid
                assign card_type_key = 'card_' | append: i | append: '_type'
                assign card_image_key = 'card_' | append: i | append: '_image'
                assign card_type = block.settings[card_type_key]
                assign card_image = block.settings[card_image_key]
              %}

              {% if card_type == 'tall' %}
                <div class="ai-hero-card-{{ ai_gen_id }} ai-hero-card-tall-{{ ai_gen_id }}">
                  {% if card_image %}
                    <img src="{{ card_image | image_url: width: 400 }}" alt="" class="ai-hero-card-image-{{ ai_gen_id }}" loading="lazy">
                  {% else %}
                    <div class="ai-hero-card-placeholder-{{ ai_gen_id }}">
                      {{ 'product-1' | placeholder_svg_tag }}
                    </div>
                  {% endif %}
                </div>
              {% elsif card_type == 'short' %}
                <div class="ai-hero-card-{{ ai_gen_id }} ai-hero-card-short-{{ ai_gen_id }}">
                  {% if card_image %}
                    <img src="{{ card_image | image_url: width: 400 }}" alt="" class="ai-hero-card-image-{{ ai_gen_id }}" loading="lazy">
                  {% else %}
                    <div class="ai-hero-card-placeholder-{{ ai_gen_id }}">
                      {{ 'product-1' | placeholder_svg_tag }}
                    </div>
                  {% endif %}
                </div>
              {% endif %}
            {% endfor %}
          </div>

          <div class="ai-hero-bento-column-{{ ai_gen_id }}">
            {% for i in (1..6) %}
              {% liquid
                assign card_type_key = 'card_' | append: i | append: '_type'
                assign card_image_key = 'card_' | append: i | append: '_image'
                assign card_type = block.settings[card_type_key]
                assign card_image = block.settings[card_image_key]
              %}

              {% if card_type == 'tall' %}
                <div class="ai-hero-card-{{ ai_gen_id }} ai-hero-card-tall-{{ ai_gen_id }}">
                  {% if card_image %}
                    <img src="{{ card_image | image_url: width: 400 }}" alt="" class="ai-hero-card-image-{{ ai_gen_id }}" loading="lazy">
                  {% else %}
                    <div class="ai-hero-card-placeholder-{{ ai_gen_id }}">
                      {{ 'product-1' | placeholder_svg_tag }}
                    </div>
                  {% endif %}
                </div>
              {% elsif card_type == 'short' %}
                <div class="ai-hero-card-{{ ai_gen_id }} ai-hero-card-short-{{ ai_gen_id }}">
                  {% if card_image %}
                    <img src="{{ card_image | image_url: width: 400 }}" alt="" class="ai-hero-card-image-{{ ai_gen_id }}" loading="lazy">
                  {% else %}
                    <div class="ai-hero-card-placeholder-{{ ai_gen_id }}">
                      {{ 'product-1' | placeholder_svg_tag }}
                    </div>
                  {% endif %}
                </div>
              {% endif %}
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </div>
</saas-hero-{{ ai_gen_id }}>

<script>
  (function() {
    class SaasHero{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        const scrollContainer = this.querySelector('.ai-hero-bento-scroll-{{ ai_gen_id }}');
        if (scrollContainer) {
          scrollContainer.addEventListener('mouseenter', () => {
            scrollContainer.style.animationPlayState = 'paused';
          });
          scrollContainer.addEventListener('mouseleave', () => {
            scrollContainer.style.animationPlayState = 'running';
          });
        }
      }
    }

    customElements.define('saas-hero-{{ ai_gen_id }}', SaasHero{{ ai_gen_id }});
  })();
</script>

