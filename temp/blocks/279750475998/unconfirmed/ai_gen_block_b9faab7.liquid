<script>
  (function() {
    class BentoGallery{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        const scrollTrack = this.querySelector('.ai-bento-scroll-track-{{ ai_gen_id }}');
        if (scrollTrack) {
          scrollTrack.addEventListener('mouseenter', () => {
            scrollTrack.style.animationPlayState = 'paused';
          });
          scrollTrack.addEventListener('mouseleave', () => {
            scrollTrack.style.animationPlayState = 'running';
          });
        }
      }
    }

    customElements.define('bento-gallery-{{ ai_gen_id }}', BentoGallery{{ ai_gen_id }});
  })();
</script>

