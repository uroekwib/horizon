{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  @import url('https://fonts.googleapis.com/css2?family=Google+Sans+Display:wght@400;500;700&display=swap');

  .ai-saas-hero-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    position: relative;
    overflow: hidden;
    background: linear-gradient(90deg, #ECFEFF 0%, #EEF2FF 50%, #F5F3FF 100%);
    padding: {{ block.settings.section_padding }}px 0;
  }

  .ai-saas-hero-{{ ai_gen_id }}::before,
  .ai-saas-hero-{{ ai_gen_id }}::after,
  .ai-saas-hero-{{ ai_gen_id }}__glow {
    content: '';
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    opacity: 0.3;
    pointer-events: none;
  }

  .ai-saas-hero-{{ ai_gen_id }}::before {
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, #22D3C8 0%, transparent 70%);
    top: 50%;
    left: 0;
    transform: translateY(-50%);
  }

  .ai-saas-hero-{{ ai_gen_id }}::after {
    width: 500px;
    height: 500px;
    background: radial-gradient(circle, #A78BFA 0%, transparent 70%);
    top: -100px;
    right: -100px;
  }

  .ai-saas-hero-{{ ai_gen_id }}__glow {
    width: 450px;
    height: 450px;
    background: radial-gradient(circle, #818CF8 0%, transparent 70%);
    bottom: -150px;
    left: 50%;
    transform: translateX(-50%);
  }

  .ai-saas-hero-container-{{ ai_gen_id }} {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 40px;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
    position: relative;
    z-index: 1;
  }

  .ai-saas-hero-content-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  .ai-saas-hero-heading-{{ ai_gen_id }} {
    font-family: 'Google Sans Display', sans-serif;
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 700;
    line-height: 1.2;
    color: {{ block.settings.heading_color }};
    margin: 0;
  }

  .ai-saas-hero-subheading-{{ ai_gen_id }} {
    font-family: 'Google Sans Display', sans-serif;
    font-size: {{ block.settings.subheading_size }}px;
    font-weight: 400;
    line-height: 1.6;
    color: {{ block.settings.subheading_color }};
    margin: 0;
  }

  .ai-saas-hero-cta-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 16px 40px;
    background: linear-gradient(135deg, #22D3C8 0%, #818CF8 50%, #A78BFA 100%);
    color: #FFFFFF;
    font-family: 'Google Sans Display', sans-serif;
    font-size: 18px;
    font-weight: 500;
    text-decoration: none;
    border-radius: 12px;
    border: none;
    cursor: pointer;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    box-shadow: 0 4px 20px rgba(34, 211, 200, 0.3);
    align-self: flex-start;
  }

  .ai-saas-hero-cta-{{ ai_gen_id }}:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 30px rgba(34, 211, 200, 0.4);
  }

  .ai-saas-hero-divider-{{ ai_gen_id }} {
    width: 100%;
    height: 1px;
    background: linear-gradient(90deg, transparent 0%, #00000020 50%, transparent 100%);
    margin: 8px 0;
  }

  .ai-saas-hero-stats-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 32px;
  }

  .ai-saas-hero-stat-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .ai-saas-hero-stat-value-{{ ai_gen_id }} {
    font-family: 'Google Sans Display', sans-serif;
    font-size: 32px;
    font-weight: 700;
    color: {{ block.settings.stat_value_color }};
    margin: 0;
  }

  .ai-saas-hero-stat-label-{{ ai_gen_id }} {
    font-family: 'Google Sans Display', sans-serif;
    font-size: 14px;
    font-weight: 400;
    color: {{ block.settings.stat_label_color }};
    margin: 0;
  }

  .ai-saas-hero-carousel-{{ ai_gen_id }} {
    position: relative;
    height: 500px;
    overflow: hidden;
    mask-image: linear-gradient(90deg, transparent 0%, black 10%, black 90%, transparent 100%);
  }

  .ai-saas-hero-carousel-track-{{ ai_gen_id }} {
    display: flex;
    gap: 20px;
    height: 100%;
    animation: ai-saas-scroll-{{ ai_gen_id }} 30s linear infinite;
  }

  @keyframes ai-saas-scroll-{{ ai_gen_id }} {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .ai-saas-hero-carousel-column-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 20px;
    flex-shrink: 0;
  }

  .ai-saas-hero-card-{{ ai_gen_id }} {
    background: rgba(255, 255, 255, 0.7);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.5);
    border-radius: 20px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 12px;
    padding: 24px;
    width: 180px;
  }

  .ai-saas-hero-card-tall-{{ ai_gen_id }} {
    height: 240px;
  }

  .ai-saas-hero-card-half-{{ ai_gen_id }} {
    height: 110px;
  }

  .ai-saas-hero-card-icon-{{ ai_gen_id }} {
    font-size: 48px;
    line-height: 1;
  }

  .ai-saas-hero-card-label-{{ ai_gen_id }} {
    font-family: 'Google Sans Display', sans-serif;
    font-size: 14px;
    font-weight: 500;
    color: #333333;
    text-align: center;
    margin: 0;
  }

  @media screen and (max-width: 989px) {
    .ai-saas-hero-container-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 40px;
      padding: 0 24px;
    }

