<script>
  (function() {
    class SaasHero{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        const track = this.querySelector('.ai-saas-hero-carousel-track-{{ ai_gen_id }}');
        if (!track) return;

        track.addEventListener('mouseenter', () => {
          track.style.animationPlayState = 'paused';
        });

        track.addEventListener('mouseleave', () => {
          track.style.animationPlayState = 'running';
        });
      }
    }

    customElements.define('saas-hero-{{ ai_gen_id }}', SaasHero{{ ai_gen_id }});
  })();
</script>

