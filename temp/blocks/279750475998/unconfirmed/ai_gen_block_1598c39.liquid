<script>
  (function() {
    class HeroSection{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.applyGradientToWords();
      }

      applyGradientToWords() {
        const headline = this.querySelector('.ai-hero-headline-{{ ai_gen_id }}');
        if (!headline) return;

        const gradientWord1 = '{{ block.settings.gradient_word_1 }}';
        const gradientWord2 = '{{ block.settings.gradient_word_2 }}';

        if (!gradientWord1 && !gradientWord2) return;

        let html = headline.innerHTML;

        if (gradientWord1) {
          const regex1 = new RegExp(`(${gradientWord1})`, 'gi');
          html = html.replace(regex1, '<span class="ai-hero-gradient-text-{{ ai_gen_id }}">$1</span>');
        }

        if (gradientWord2) {
          const regex2 = new RegExp(`(${gradientWord2})`, 'gi');
          html = html.replace(regex2, '<span class="ai-hero-gradient-text-{{ ai_gen_id }}">$1</span>');
        }

        headline.innerHTML = html;
      }
    }

    customElements.define('hero-section-{{ ai_gen_id }}', HeroSection{{ ai_gen_id }});
  })();
</script>

