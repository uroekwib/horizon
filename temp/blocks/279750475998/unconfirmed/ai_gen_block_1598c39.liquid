    position: relative;
  }

  .ai-hero-bento-card-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-hero-bento-fade-top-{{ ai_gen_id }},
  .ai-hero-bento-fade-bottom-{{ ai_gen_id }} {
    position: absolute;
    left: 0;
    right: 0;
    height: {{ block.settings.fade_height }}px;
    pointer-events: none;
    z-index: 2;
  }

  .ai-hero-bento-fade-top-{{ ai_gen_id }} {
    top: 0;
    background: linear-gradient(to bottom, {{ block.settings.fade_color }} 0%, transparent 100%);
  }

  .ai-hero-bento-fade-bottom-{{ ai_gen_id }} {
    bottom: 0;
    background: linear-gradient(to top, {{ block.settings.fade_color }} 0%, transparent 100%);
  }

  @media screen and (max-width: 989px) {
