    font-weight: {{ block.settings.stat_label_weight }};
    color: {{ block.settings.stat_label_color }};
    line-height: 1.2;
  }

  .ai-hero-right-{{ ai_gen_id }} {
    position: relative;
    height: {{ block.settings.bento_height }}px;
    overflow: hidden;
  }

  .ai-hero-bento-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: {{ block.settings.bento_gap }}px;
    height: 100%;
    position: relative;
  }

  .ai-hero-bento-column-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.bento_gap }}px;
    animation-timing-function: linear;
    animation-iteration-count: infinite;
  }

  .ai-hero-bento-column-{{ ai_gen_id }}:nth-child(1) {
    animation: ai-hero-scroll-down-{{ ai_gen_id }} {{ block.settings.scroll_speed_column_1 }}s linear infinite;
  }

  .ai-hero-bento-column-{{ ai_gen_id }}:nth-child(2) {
