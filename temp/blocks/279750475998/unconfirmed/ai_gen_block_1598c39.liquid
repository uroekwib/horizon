{% style %}
  @import url('https://fonts.googleapis.com/css2?family=Google+Sans+Display:wght@400;500;600;700&display=swap');

  .ai-hero-section-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    background: transparent;
    padding: {{ block.settings.section_padding_top }}px {{ block.settings.section_padding_horizontal }}px {{ block.settings.section_padding_bottom }}px;
  }

  .ai-hero-container-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: {{ block.settings.content_gap }}px;
    align-items: center;
    max-width: 1400px;
    margin: 0 auto;
  }

  .ai-hero-left-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.left_content_gap }}px;
  }

  .ai-hero-headline-{{ ai_gen_id }} {
    font-family: 'Noto Sans Thai', 'Google Sans Display', sans-serif;
    font-size: {{ block.settings.headline_size }}px;
    font-weight: {{ block.settings.headline_weight }};
    line-height: {{ block.settings.headline_line_height }};
    color: {{ block.settings.headline_color }};
    margin: 0;
  }

  .ai-hero-gradient-text-{{ ai_gen_id }} {
    background: linear-gradient(135deg, {{ block.settings.gradient_color_1 }} 0%, {{ block.settings.gradient_color_2 }} 50%, {{ block.settings.gradient_color_3 }} 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: ai-hero-gradient-shift-{{ ai_gen_id }} {{ block.settings.gradient_animation_speed }}s ease infinite;
    background-size: 200% 200%;
  }

  @keyframes ai-hero-gradient-shift-{{ ai_gen_id }} {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  .ai-hero-subtitle-{{ ai_gen_id }} {
    font-family: 'Noto Sans Thai', 'Google Sans Display', sans-serif;
    font-size: {{ block.settings.subtitle_size }}px;
    font-weight: {{ block.settings.subtitle_weight }};
    line-height: {{ block.settings.subtitle_line_height }};
    color: {{ block.settings.subtitle_color }};
    margin: 0;
  }

  .ai-hero-buttons-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.button_gap }}px;
    flex-wrap: wrap;
  }

  .ai-hero-button-{{ ai_gen_id }} {
    font-family: 'Noto Sans Thai', 'Google Sans Display', sans-serif;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: {{ block.settings.button_font_weight }};
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    border-radius: {{ block.settings.button_border_radius }}px;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
  }

  .ai-hero-button-gradient-{{ ai_gen_id }} {
    background: linear-gradient(135deg, {{ block.settings.gradient_color_1 }} 0%, {{ block.settings.gradient_color_2 }} 50%, {{ block.settings.gradient_color_3 }} 100%);
    color: {{ block.settings.button_gradient_text_color }};
    border: {{ block.settings.button_gradient_border_width }}px solid transparent;
  }

  .ai-hero-button-gradient-{{ ai_gen_id }}:hover {
    opacity: {{ block.settings.button_gradient_hover_opacity }};
    transform: translateY(-2px);
  }

  .ai-hero-button-outline-{{ ai_gen_id }} {
