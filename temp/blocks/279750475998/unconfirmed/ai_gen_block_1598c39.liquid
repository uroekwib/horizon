  .ai-hero-bento-column-{{ ai_gen_id }}:nth-child(3) {
    animation: ai-hero-scroll-down-{{ ai_gen_id }} {{ block.settings.scroll_speed_column_3 }}s linear infinite;
  }

  @keyframes ai-hero-scroll-down-{{ ai_gen_id }} {
    0% {
      transform: translateY(0);
    }
    100% {
      transform: translateY(-50%);
    }
  }

  @keyframes ai-hero-scroll-up-{{ ai_gen_id }} {
    0% {
      transform: translateY(-50%);
    }
    100% {
      transform: translateY(0);
    }
  }

  .ai-hero-bento-card-{{ ai_gen_id }} {
