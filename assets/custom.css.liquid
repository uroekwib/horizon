/* ============================================================
   §1  FONT LOADING — unicode-range บังคับ Thai → Noto เท่านั้น

   Google Sans มี Thai glyphs ด้วย ดังนั้นต้องใช้ unicode-range
   ตัด Thai ออกจาก Google Sans และกำหนด Noto ให้ Thai โดยตรง
   ทั้งคู่ใช้ชื่อ family เดียวกัน 'Brand Font'
   browser จะเลือก font ตาม character โดยอัตโนมัติ

   Noto โหลดจาก CDN URL ตรงๆ (ใช้ path เดิมที่ Dawn เคยใช้งานได้)
   Google Sans โหลดจาก theme Assets
   ============================================================ */

/* ── Google Sans — Latin, numbers, symbols เท่านั้น ── */
@font-face {
  font-family: 'Brand Font';
  src: url('{{ "GoogleSans-Regular.woff2" | asset_url }}') format('woff2');
  font-weight: 400;
  font-style: normal;
  font-display: swap;
  unicode-range:
    U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC,
    U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074,
    U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215,
    U+FEFF, U+FFFD;
}
@font-face {
  font-family: 'Brand Font';
  src: url('{{ "GoogleSans-Bold.woff2" | asset_url }}') format('woff2');
  font-weight: 700;
  font-style: normal;
  font-display: swap;
  unicode-range:
    U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC,
    U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074,
    U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215,
    U+FEFF, U+FFFD;
}

/* ── Noto Sans Thai — Thai characters เท่านั้น ── */
@font-face {
  font-family: 'Brand Font';
  src: url('https://cdn.shopify.com/s/files/1/0098/2653/3433/files/NotoSansThai-Regular.woff2') format('woff2'),
       url('https://cdn.shopify.com/s/files/1/0098/2653/3433/files/NotoSansThai-Regular.woff') format('woff');
  font-weight: 400;
  font-style: normal;
  font-display: swap;
  text-rendering: optimizeSpeed;
  unicode-range: U+0E00-U+0E7F;
}
@font-face {
  font-family: 'Brand Font';
  src: url('https://cdn.shopify.com/s/files/1/0098/2653/3433/files/NotoSansThai-Bold.woff2') format('woff2'),
       url('https://cdn.shopify.com/s/files/1/0098/2653/3433/files/NotoSansThai-Bold.woff') format('woff');
  font-weight: 700;
  font-style: normal;
  font-display: swap;
  unicode-range: U+0E00-U+0E7F;
}


/* ============================================================
   §2  HORIZON VARIABLE OVERRIDES
   Map ตรงกับ settings_schema — อย่าย้ายไปที่อื่น
   ============================================================ */

:root {
  /* Primary color (Horizon maps นี้เป็น button / link color) */
  --color-background:              255, 255, 255;
  --color-foreground:              26, 32, 44;
  --color-shadow:                  100, 100, 160;
  --color-button:                  23, 169, 187;      /* CI anchor #17a9bb */
  --color-button-text:             255, 255, 255;
  --color-secondary-button:        243, 240, 255;     /* purple-l */
  --color-secondary-button-text:   124, 58, 237;     /* purple-d */
  --color-link:                    23, 169, 187;

  /* Border & Radius */
  --media-radius:                  14px;
  --product-card-corner-radius:    1.4rem;
  --buttons-radius:                99px;
  --inputs-radius:                 8px;

  /* Layout */
  --page-width:                    116rem;
  --spacing-sections-desktop:      72px;
  --spacing-sections-mobile:       48px;
  --grid-desktop-vertical-spacing: 20px;
  --grid-desktop-horizontal-spacing: 20px;
}


/* ============================================================
   §3  BRAND TOKENS (Octopus CI)
   ============================================================ */

:root {
  /* ── Cyan Duo ──
     #17a9bb = CI anchor  → text, badge, border, dark end of gradient
     #14c9df = CI vivid   → glow, highlight, bright start of gradient
     ห้ามใช้สีเข้มกว่า #17a9bb สำหรับ text                         */
  --oc-cyan:             #17a9bb;
  --oc-cyan-d:           #17a9bb;    /* text / badge — no darker */
  --oc-cyan-vv:          #14c9df;    /* vivid — gradient / glow only */
  --oc-cyan-l:           #e3f8fb;
  --oc-cyan-rgb:         23, 169, 187;
  --oc-cyan-vv-rgb:      20, 201, 223;

  /* Aliases */
  --brand-cyan:          #17a9bb;
  --brand-cyan-vv:       #14c9df;
  --brand-bg:            #f3f7fa;

  /* ── Gradients ── */
  --brand-grad-1:        linear-gradient(140deg, rgba(241,236,255,1) 22%, rgba(235,252,255,0.85) 45%, rgba(236,255,254,0.81) 74%, rgba(242,255,250,1) 100%);
  --brand-grad-2:        linear-gradient(177deg, #c3f9ff 0%, #c78ff2 100%);
  --oc-grad:             linear-gradient(120deg, #CCFBF1 0%, #E0E7FF 50%, #EDE9FE 100%);
  --oc-grad-btn:         linear-gradient(90deg, #14c9df, #17a9bb, #818CF8, #A78BFA);
  --oc-grad-btn-rev:     linear-gradient(90deg, #A78BFA, #818CF8, #17a9bb, #14c9df);
  --oc-rainbow:          linear-gradient(90deg, #14c9df 0%, #17a9bb 28%, #818CF8 58%, #A78BFA 82%, #14c9df 100%);
  --oc-rainbow-size:     300% 100%;

  /* ── Purple ── */
  --oc-purple:           #A78BFA;
  --oc-purple-d:         #7C3AED;
  --oc-purple-l:         #F3F0FF;
  --oc-purple-rgb:       124, 58, 237;

  /* ── Ink Scale ── */
  --oc-ink:              #1A202C;
  --oc-ink-70:           #374151;
  --oc-ink-40:           #6B7280;
  --oc-ink-15:           #E5E7EB;
  --oc-ink-05:           #F9FAFB;

  /* ── Glass / Blur ── */
  --oc-glass:            rgba(255, 255, 255, 0.72);
  --oc-glass-strong:     rgba(255, 255, 255, 0.90);
  --oc-glass-subtle:     rgba(255, 255, 255, 0.45);
  --oc-glass-border:     rgba(255, 255, 255, 0.55);
  --oc-glass-border-subtle: rgba(200, 200, 240, 0.35);
  --oc-blur:             blur(20px) saturate(160%);
  --oc-blur-strong:      blur(28px) saturate(180%);

  /* ── Shadow ── */
  --oc-shadow-sm:        0 2px 16px rgba(100, 100, 160, 0.08);
  --oc-shadow-md:        0 8px 32px rgba(100, 100, 160, 0.14);
  --oc-shadow-lg:        0 20px 60px rgba(100, 100, 160, 0.18);
  --oc-shadow-glow-cyan:   0 4px 20px rgba(20, 201, 223, 0.30), 0 1px 6px rgba(23, 169, 187, 0.20);
  --oc-shadow-glow-purple: 0 4px 24px rgba(124, 58, 237, 0.3);

  /* ── Radius ── */
  --oc-radius-sm:        8px;
  --oc-radius:           14px;
  --oc-radius-lg:        22px;
  --oc-radius-xl:        32px;
  --oc-radius-pill:      999px;

  /* ── Motion ── */
  --oc-ease-expo:        cubic-bezier(0.16, 1, 0.3, 1);
  --oc-ease-back:        cubic-bezier(0.34, 1.56, 0.64, 1);
  --oc-ease-smooth:      cubic-bezier(0.4, 0, 0.2, 1);
  --oc-dur-fast:         0.15s;
  --oc-dur-base:         0.25s;
  --oc-dur-slow:         0.45s;
  --oc-dur-xslow:        0.75s;

  /* ── Header ── */
  --oc-header-h-hero:    220px;
  --oc-header-h-slim:    64px;
  --oc-announce-h:       40px;
}


/* ============================================================
   §4  TYPOGRAPHY
   ============================================================ */

/* ── Type Scale ── */
:root {
  --oc-text-xs:    0.75rem;
  --oc-text-sm:    0.8125rem;   /* 13px */
  --oc-text-base:  0.9375rem;   /* 15px */
  --oc-text-md:    1rem;
  --oc-text-lg:    1.125rem;
  --oc-text-h4:    clamp(1rem,    1.8vw, 1.25rem);
  --oc-text-h3:    clamp(1.125rem, 2vw,  1.5rem);
  --oc-text-h2:    clamp(1.25rem,  2.5vw, 2rem);
  --oc-text-h1:    clamp(1.75rem,  4vw,  3.125rem);
  --oc-text-hero:  clamp(2rem,     5vw,  4rem);
}

/* ── Override Horizon's font CSS variables ──────────────────
   base.css ใช้ var(--font-paragraph--family) ฯลฯ ทั้งหมด
   ซึ่งมาจาก theme font picker settings
   เราต้อง override ตัวแปรเหล่านี้ใน :root โดยตรง
   เพื่อให้ทุกที่ใน base.css ได้ 'Brand Font' อัตโนมัติ
   ────────────────────────────────────────────────────────── */
:root {
  --font-paragraph--family:       'Brand Font', sans-serif;
  --font-h1--family:              'Brand Font', sans-serif;
  --font-h2--family:              'Brand Font', sans-serif;
  --font-h3--family:              'Brand Font', sans-serif;
  --font-h4--family:              'Brand Font', sans-serif;
  --font-h5--family:              'Brand Font', sans-serif;
  --font-h6--family:              'Brand Font', sans-serif;
  --button-font-family-primary:   'Brand Font', sans-serif;
  --button-font-family-secondary: 'Brand Font', sans-serif;
  --cart-primary-font-family:     'Brand Font', sans-serif;
  --cart-secondary-font-family:   'Brand Font', sans-serif;
  --font-family:                  'Brand Font', sans-serif;
}

/* ── Mobile: Tahoma fallback สำหรับ performance ── */
@media (max-width: 767px) {
  html, body,
  .c-menu-wrapper, .categories .c-menu-wrapper a,
  .blog .c-menu-wrapper, .collection_link,
  .sub_col_h3, .layout_block, .categories {
    font-family: 'Brand Font', 'Tahoma', sans-serif;
    -webkit-text-size-adjust: 100%;
    -ms-text-size-adjust: 100%;
    text-size-adjust: 100%;
  }
}

/* ── Headings ── */
h1, h2, h3, h4, h5, h6 {
  font-family: 'Brand Font', sans-serif;
  color: var(--oc-ink);
  line-height: 1.25;
  font-weight: 700;
  letter-spacing: 0;
}
h1 { font-size: var(--oc-text-h1); }
h2 { font-size: var(--oc-text-h2); }
h3 { font-size: var(--oc-text-h3); }
h4 { font-size: var(--oc-text-h4); }

/* ── Paragraph letter-spacing ── */
p {
  letter-spacing: 0.02em;
}

/* ── Links ── */
a {
  text-decoration: none;
  color: var(--oc-cyan-d);
}

/* ── Legacy font helpers ── */
.tiny    { font-size: 0.8rem; line-height: 1.6rem; font-weight: 600; }
.prod_h2 { font-size: 1.6rem; line-height: 2.8rem; }
.prod_h4 { font-size: 1.6rem; line-height: 2.8rem; }
.field__label {
  font-size: 11px;
  letter-spacing: 0;
  font-weight: 550;
  top: 13px;
}


/* ============================================================
   §5  KEYFRAME ANIMATIONS
   ============================================================ */

@keyframes oc-rainbow-move {
  0%   { background-position: 0% 50%; }
  50%  { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}

@keyframes oc-rainbow-text {
  0%   { background-position: 0% center; }
  100% { background-position: 300% center; }
}

@keyframes oc-announce-shift {
  0%   { background-position: 0% 50%; }
  50%  { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}

@keyframes oc-fade-up {
  from { opacity: 0; transform: translateY(16px); }
  to   { opacity: 1; transform: translateY(0); }
}

@keyframes oc-fade-in {
  from { opacity: 0; }
  to   { opacity: 1; }
}

@keyframes oc-scale-in {
  from { opacity: 0; transform: scale(0.92); }
  to   { opacity: 1; transform: scale(1); }
}

@keyframes oc-float-in {
  from { opacity: 0; transform: translateY(20px) scale(0.9); }
  to   { opacity: 1; transform: translateY(0) scale(1); }
}

@keyframes oc-orb-drift {
  from { transform: translate(0, 0) scale(1); }
  to   { transform: translate(30px, 20px) scale(1.06); }
}

/* Staggered card grid */
.oc-card-grid > * {
  animation: oc-fade-up 0.4s var(--oc-ease-expo) both;
}
.oc-card-grid > *:nth-child(1) { animation-delay: 0.04s; }
.oc-card-grid > *:nth-child(2) { animation-delay: 0.08s; }
.oc-card-grid > *:nth-child(3) { animation-delay: 0.12s; }
.oc-card-grid > *:nth-child(4) { animation-delay: 0.16s; }
.oc-card-grid > *:nth-child(5) { animation-delay: 0.20s; }
.oc-card-grid > *:nth-child(6) { animation-delay: 0.24s; }
.oc-card-grid > *:nth-child(7) { animation-delay: 0.28s; }
.oc-card-grid > *:nth-child(8) { animation-delay: 0.32s; }
.oc-card-grid > *:nth-child(9) { animation-delay: 0.36s; }

/* Respect prefers-reduced-motion */
@media (prefers-reduced-motion: reduce) {
  *, *::before, *::after {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
  }
}


/* ============================================================
   §6  SECTION BACKGROUND COLOR SCHEMES
   ใช้ใน Horizon: section > .section-background.color-scheme-X
   
   1 = Pastel Glass    (default ส่วนใหญ่)
   2 = White Clean     (product card, content)
   3 = Cyan Soft       (highlight, featured)
   4 = Rainbow Button  (CTA, promo banner)
   ============================================================ */

.section-background.color-scheme-1 {
  background: linear-gradient(
    140deg,
    rgba(241, 236, 255, 1)    22%,
    rgba(235, 252, 255, 0.85) 45%,
    rgba(236, 255, 254, 0.81) 74%,
    rgba(242, 255, 250, 1)   100%
  ) !important;
}

.section-background.color-scheme-2 {
  background: #ffffff !important;
}

.section-background.color-scheme-3 {
  background: linear-gradient(177deg, #c3f9ff 0%, #c78ff2 100%) !important;
}

.section-background.color-scheme-4 {
  background: var(--oc-grad-btn-rev) !important;
  background-size: 200% 100% !important;
  animation: oc-rainbow-move 8s ease infinite;
}

/* Color scheme text contrast fixes */
.section-background.color-scheme-3,
.section-background.color-scheme-4 {
  color: var(--oc-ink) !important;
}
.section-background.color-scheme-4 a,
.section-background.color-scheme-4 .button {
  color: #fff !important;
}


/* ============================================================
   §7  BUTTON SYSTEM
   ============================================================ */

/* ── Primary Button — CI gradient ── */
.button,
.button--primary,
button.shopify-payment-button__button--unbranded {
  border-radius: var(--oc-radius-pill) !important;
  font-family: 'Brand Font', sans-serif;
  font-weight: 600;
  transition: transform var(--oc-dur-fast),
              box-shadow var(--oc-dur-base),
              background-position var(--oc-dur-base);
}

.button--primary,
button.shopify-payment-button__button--unbranded {
  background: var(--oc-grad-btn) !important;
  background-size: 200% 100% !important;
  color: #fff !important;
  border: none !important;
}
.button--primary:hover,
button.shopify-payment-button__button--unbranded:hover {
  background-position: 100% 0 !important;
  transform: translateY(-1px);
  box-shadow: var(--oc-shadow-glow-cyan);
}

/* ── Secondary Button — pastel purple/cyan ── */
.button--secondary,
.button-secondary {
  background: var(--brand-grad-2) !important;
  color: var(--oc-ink) !important;
  border-radius: var(--oc-radius-pill) !important;
  border: none !important;
}
.button--secondary:hover,
.button-secondary:hover {
  transform: translateY(-1px);
  box-shadow: var(--oc-shadow-glow-purple);
}

/* ── Utility gradient button class ── */
.oc-btn-grad {
  color: #fff;
  background: var(--oc-grad-btn);
  background-size: 200% 100%;
  border: none;
  border-radius: var(--oc-radius-pill);
  padding: 10px 24px;
  font-weight: 600;
  cursor: pointer;
  transition: background-position var(--oc-dur-base) ease,
              transform var(--oc-dur-fast) ease,
              box-shadow var(--oc-dur-base) ease;
}
.oc-btn-grad:hover {
  background-position: 100% 0;
  transform: translateY(-1px);
  box-shadow: var(--oc-shadow-glow-cyan);
}

/* ── Outline button ── */
.oc-btn-outline {
  background: #fff;
  color: var(--oc-ink-70);
  border: 1.5px solid var(--oc-ink-15);
  border-radius: var(--oc-radius-pill);
  padding: 10px 24px;
  font-weight: 600;
  cursor: pointer;
  transition: border-color var(--oc-dur-base), color var(--oc-dur-base);
}
.oc-btn-outline:hover {
  border-color: var(--oc-purple);
  color: var(--oc-purple-d);
}

/* ── LINE CTA button ── */
.oc-btn-line {
  background: #06C755;
  color: #fff;
  border: none;
  border-radius: var(--oc-radius-pill);
  padding: 10px 24px;
  font-weight: 700;
  cursor: pointer;
  transition: filter var(--oc-dur-fast), transform var(--oc-dur-fast);
}
.oc-btn-line:hover {
  filter: brightness(1.1);
  transform: translateY(-1px);
}

/* ── Legacy gradient class ── */
.buttongradient {
  color: #252525;
  background: linear-gradient(156deg, rgba(205,188,255,0.7) 0%, rgba(208,255,240,0.85) 100%);
  font-weight: 600;
  padding: 8px 15px;
  border-radius: var(--oc-radius-pill);
}


/* ============================================================
   §8  UTILITY CLASSES
   ============================================================ */

/* ── Display Helpers ── */
@media (max-width: 749px) {
  .oc-desktop-only, .only-desktop { display: none !important; }
}
@media (min-width: 750px) {
  .oc-mobile-only, .only-mobile { display: none !important; }
}
@media (max-width: 989px) {
  .oc-lg-only { display: none !important; }
}

/* ── Rainbow Text ── */
.oc-rainbow-text {
  background: var(--oc-rainbow);
  background-size: var(--oc-rainbow-size);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  animation: oc-rainbow-text 5s linear infinite;
  display: inline-block;
}

/* ── Background helpers ── */
.oc-bg-grad   { background: var(--oc-grad); }
.oc-bg-grad-v { background: var(--brand-grad-1); }
.oc-bg-glass {
  background: var(--oc-glass);
  backdrop-filter: var(--oc-blur);
  -webkit-backdrop-filter: var(--oc-blur);
  border: 1px solid var(--oc-glass-border-subtle);
}

/* ── Rainbow Highlight (replaces .rainbowBG) ── */
.oc-highlight,
.rainbowBG {
  background: linear-gradient(108deg, rgba(223,213,254,0.7) 0%, rgba(215,252,240,0.7) 100%);
  padding: 2px 8px;
  border-radius: 4px;
}
.rainbow-highlight-bg {
  background: linear-gradient(108deg, rgba(223,213,254,0.7) 0%, rgba(215,252,240,0.7) 100%);
  padding: 5px 8px;
  margin: 0 5px;
}

/* ── Gray Box (replaces .grayBG) ── */
.oc-box-gray,
.grayBG {
  color: var(--oc-ink);
  background: #EAEDF2;
  margin: 10px 0;
  padding: 15px;
  border-radius: var(--oc-radius-sm);
}
.grayBG p { margin: 8px 0; }

/* ── White box ── */
.whiteBG {
  background: #fff;
  margin: 0 10px 10px 10px;
  padding: 0 15px 15px 15px;
}

/* ── Home paragraph box ── */
.home-paragraph {
  color: #262b30;
  background-color: #EAEDF2;
  font-size: 13px;
  line-height: 26px;
  margin: 10px;
  padding: 15px;
}

/* ── Badges ── */
.oc-badge-cyan {
  background: var(--oc-cyan-l);
  color: var(--oc-cyan-d);
  border: 1px solid rgba(23, 169, 187, 0.3);
  border-radius: var(--oc-radius-pill);
  padding: 2px 10px;
  font-size: var(--oc-text-xs);
  font-weight: 600;
  display: inline-block;
}
.oc-badge-purple {
  background: var(--oc-purple-l);
  color: var(--oc-purple-d);
  border: 1px solid rgba(124, 58, 237, 0.25);
  border-radius: var(--oc-radius-pill);
  padding: 2px 10px;
  font-size: var(--oc-text-xs);
  font-weight: 600;
  display: inline-block;
}

/* ── Dividers ── */
.divline {
  border-top: 0.5px none #EAEDF2;
  border-bottom: 1px solid #EAEDF2;
  display: block !important;
}
.head-line {
  border-top: 0.5px none #EAEDF2;
  border-bottom: 1px solid #EAEDF2;
}

/* ── RTE list ── */
.rte li { list-style: initial; }

/* ── Product card image ratio ── */
.ratio { --ratio-percent: 75.241% !important; }

/* ── Screen-reader only (GEO helper) ── */
.oc-sr-only {
  position: absolute;
  width: 1px; height: 1px;
  padding: 0; margin: -1px;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  white-space: nowrap;
  border: 0;
}


/* ============================================================
   §9  COMPONENTS
   ============================================================ */

/* ── §9a Language Toggle ── */
.switch_language {
  display: inline-flex;
  align-items: center;
}
.switch_language .switch {
  position: relative;
  font-size: 13px;
}
.switch_language .check-toggle {
  position: absolute;
  visibility: hidden;
}
input[type="checkbox"] {
  display: inline-block;
  width: auto;
  margin-right: .5rem;
}
.switch_language input.check-toggle-round-flat + label {
  padding: 2px;
  width: 75px;
  height: 30px;
  background-color: #f9fafc;
  border-radius: 60px;
  box-shadow: inset 0 0 4px rgba(0,0,0,0.15);
}
.switch_language .check-toggle + label {
  display: block;
  position: relative;
  cursor: pointer;
  outline: none;
}
.switch_language input.check-toggle-round-flat + label::before {
  top: 2px; left: 2px; bottom: 2px; right: 2px;
  border-radius: 60px;
}
.switch_language input.check-toggle-round-flat + label::before,
.switch_language input.check-toggle-round-flat + label::after {
  display: block;
  position: absolute;
  content: "";
}
.switch_language input.check-toggle-round-flat:checked + label::after {
  margin-left: 36px;
}
.switch_language input.check-toggle-round-flat + label::after {
  top: 3px; left: 3px; bottom: 3px;
  width: 34px;
  background-color: var(--oc-cyan-d);
  border-radius: 52px;
  transition: margin .2s;
}
.switch_language input.check-toggle-round-flat:checked ~ .on {
  color: #707070;
}
.switch_language .switch > span.on {
  padding-left: 5px;
  color: #fff;
}
.switch_language .switch > span {
  position: absolute;
  top: 3px;
  pointer-events: none;
  text-transform: uppercase;
  text-shadow: 0 1px 0 rgba(0,0,0,.06);
  width: 45%;
  text-align: center;
}
.switch_language input.check-toggle-round-flat:checked ~ .off {
  color: #fff;
}
.switch_language .switch > span.off {
  right: 0;
  padding-right: 4px;
  color: #707070;
}


