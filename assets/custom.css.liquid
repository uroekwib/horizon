/* ============================================================
   OCTOPUS MEDIA SOLUTIONS — HORIZON DESIGN SYSTEM (Merged with Legacy)
   Version 1.1 | Merged with Ideation Design System & Dawn Custom CSS
   ============================================================ */

/* ============================================================
   LAYER 1 — HORIZON NATIVE VARIABLE OVERRIDES
   ============================================================ */
:root {
  /* Horizon Color Scheme overrides */
  --color-background:         255, 255, 255;
  --color-foreground:         26, 32, 44;       /* --ink */
  --color-shadow:             100, 100, 160;
  --color-button:             23, 169, 187;      /* --brand-cyan */
  --color-button-text:        255, 255, 255;
  --color-secondary-button:   243, 240, 255;     /* --purple-l */
  --color-secondary-button-text: 124, 58, 237;   /* --purple-d */
  --color-link:               23, 169, 187;      /* --brand-cyan */
  --octopus-gradient-hero: {{ settings.octopus_gradient_hero | default: 'linear-gradient(135deg, #667eea 0%, #764ba2 100%)' }};
  --octopus-gradient-announce: {{ settings.octopus_gradient_announce | default: 'linear-gradient(135deg, #f093fb 0%, #f5576c 100%)' }};
}
  /* Horizon Border/Radius Settings */
  --media-radius:             14px;
  --product-card-corner-radius: 1.4rem;          /* 14px */
  --buttons-radius:           99px;              /* pill buttons */
  --inputs-radius:            99px;              /* pill inputs */

  /* Horizon Spacing */
  --page-width:               116rem;            /* 1160px max */
  --spacing-sections-desktop: 72px;
  --spacing-sections-mobile:  48px;
}

/* ============================================================
   LAYER 2 — BRAND TOKENS (Octopus Design Language)
   ============================================================ */
:root {
  /* ── Primary Palette ── */
  --oc-cyan:           #17a9bb;   /* CI anchor */
  --oc-cyan-d:         #17a9bb;   /* text/badge */
  --oc-cyan-vv:        #14c9df;   /* CI vivid */
  --oc-cyan-l:         #e3f8fb;   /* light tint */
  --oc-cyan-rgb:       23, 169, 187;
  --oc-cyan-vv-rgb:    20, 201, 223;

  /* ── Brand Tokens ── */
  --brand-cyan:        #17a9bb;
  --brand-cyan-vv:     #14c9df;
  --brand-bg:          #f3f7fa;
  --brand-grad-1:      linear-gradient(140deg, rgba(241,236,255,1) 22%, rgba(235,252,255,0.85) 45%, rgba(236,255,254,0.81) 74%, rgba(242,255,250,1) 100%);
  --brand-grad-2:      linear-gradient(177deg, #c3f9ff 0%, #c78ff2 100%);

  --oc-purple:         #A78BFA;
  --oc-purple-d:       #7C3AED;
  --oc-purple-l:       #F3F0FF;
  
  --oc-ink:            #1A202C;
  --oc-ink-70:         #374151;
  --oc-ink-40:         #6B7280;
  --oc-ink-15:         #E5E7EB;

  /* ── Gradients ── */
  --oc-grad-btn:       linear-gradient(90deg, #14c9df, #17a9bb, #818CF8, #A78BFA);
  --oc-rainbow:        linear-gradient(90deg, #14c9df 0%, #17a9bb 28%, #818CF8 58%, #A78BFA 82%, #14c9df 100%);
  --oc-rainbow-size:   300% 100%;

  /* ── Effects ── */
  --oc-glass:          rgba(255, 255, 255, 0.72);
  --oc-blur:           blur(20px) saturate(160%);
  --oc-shadow-sm:      0 2px 16px rgba(100, 100, 160, 0.08);
  --oc-shadow-md:      0 8px 32px rgba(100, 100, 160, 0.14);
  --oc-shadow-glow-cyan:   0 4px 20px rgba(20, 201, 223, 0.30), 0 1px 6px rgba(23, 169, 187, 0.20);

  /* ── Radius ── */
  --oc-radius-sm:      8px;
  --oc-radius:         14px;
  --oc-radius-lg:      22px;
  --oc-radius-pill:    999px;

  /* ── Motion ── */
  --oc-ease-expo:      cubic-bezier(0.16, 1, 0.3, 1);
  --oc-dur-base:       0.25s;
}

/* ============================================================
   LAYER 3 — TYPOGRAPHY SYSTEM
   ============================================================ */
@font-face {
  font-family: 'Noto Sans Thai';
  src: url('https://cdn.shopify.com/s/files/1/0098/2653/3433/files/NotoSansThai-Regular.woff2') format('woff2'),
       url('https://cdn.shopify.com/s/files/1/0098/2653/3433/files/NotoSansThai-Regular.woff') format('woff');
  font-weight: 400;
  font-style: normal;
  font-display: swap;
}

@font-face {
  font-family: 'Noto Sans Thai';
  src: url('https://cdn.shopify.com/s/files/1/0098/2653/3433/files/NotoSansThai-Bold.woff2') format('woff2');
  font-weight: 700;
  font-style: normal;
  font-display: swap;
}

:root {
  --oc-font-display:  'Google Sans Display', 'Noto Sans Thai', -apple-system, sans-serif;
  --oc-font-body:     'Noto Sans Thai', -apple-system, BlinkMacSystemFont, sans-serif;
  
  --oc-text-base:  0.9375rem; /* 15px */
  --oc-text-h4:    clamp(1rem,    1.8vw, 1.25rem);
  --oc-text-h3:    clamp(1.125rem, 2vw,  1.5rem);
  --oc-text-h2:    clamp(1.25rem,  2.5vw, 2rem);
  --oc-text-h1:    clamp(1.75rem,  4vw,  3.125rem);
}

body {
  font-family: var(--oc-font-body);
  background: var(--brand-bg);
  color: var(--oc-ink-70);
  font-size: var(--oc-text-base);
  line-height: 1.7;
}

h1, h2, h3, h4, h5, h6 {
  font-family: var(--oc-font-display);
  color: var(--oc-ink);
  line-height: 1.25;
  font-weight: 700;
  letter-spacing: -0.02em;
}

/* ── Mobile Thai font fallback ── */
@media (max-width: 767px) {
  html, body, button, input, select, textarea {
    font-family: 'Noto Sans Thai', 'Tahoma', sans-serif;
    -webkit-text-size-adjust: 100%;
  }
}

/* ============================================================
   LAYER 4 — UTILITY CLASSES (Merged from Ideation)
   ============================================================ */
/* ── Rainbow Text ── */
.oc-rainbow-text {
  background: var(--oc-rainbow);
  background-size: var(--oc-rainbow-size);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  animation: oc-rainbow-text 5s linear infinite;
  display: inline-block;
}

/* ── Buttons ── */
.oc-btn-grad {
  color: #fff;
  background: var(--oc-grad-btn);
  background-size: 200% 100%;
  border: none;
  border-radius: var(--oc-radius-pill);
  padding: 10px 24px;
  font-weight: 600;
  cursor: pointer;
  transition: all var(--oc-dur-base) ease;
}
.oc-btn-grad:hover {
  background-position: 100% 0;
  transform: translateY(-1px);
  box-shadow: var(--oc-shadow-glow-cyan);
}

.oc-btn-line {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  background: #06C755;
  color: #fff;
  border: none;
  border-radius: var(--oc-radius-pill);
  padding: 9px 20px;
  font-weight: 600;
  text-decoration: none;
  transition: all var(--oc-dur-base);
}
.oc-btn-line:hover {
  background: #05a847;
  transform: translateY(-1px);
  box-shadow: 0 6px 16px rgba(6, 199, 85, 0.3);
}

/* ── Badges ── */
.oc-badge {
  display: inline-block;
  padding: 3px 10px;
  border-radius: var(--oc-radius-pill);
  font-size: 0.75rem;
  font-weight: 700;
  letter-spacing: 0.05em;
  text-transform: uppercase;
}
.oc-badge-cyan   { background: var(--oc-cyan-l); color: var(--oc-cyan-d); }
.oc-badge-purple { background: var(--oc-purple-l); color: var(--oc-purple-d); }

/* ============================================================
   LAYER 5 — LEGACY CUSTOM CSS (Merged from Dawn)
   ============================================================ */

/* ── Display Helpers ── */
@media (max-width: 749px){ .only-desktop { display: none !important; } }
@media (min-width: 750px){ .only-mobile { display: none !important; } }

/* ── Language Switcher ── */
.switch_language {
  display: inline-flex;
  align-items: center;
}
.switch_language .switch { position: relative; font-size:13px; }
.switch_language input.check-toggle-round-flat + label {
  padding: 2px;
  width: 75px;
  height: 30px;
  background-color: #f9fafc;
  border-radius: 60px;
  box-shadow: inset 0 0 4px #00000026;
  cursor: pointer;
}
.switch_language input.check-toggle-round-flat:checked + label::after { margin-left: 36px; }
.switch_language input.check-toggle-round-flat + label::after {
  top: 3px; left: 3px; bottom: 3px;
  width: 34px;
  background-color: #17a9bb;
  border-radius: 52px;
  transition: margin .2s;
  display: block; position: absolute; content: "";
}

/* ── Header Overrides ── */
@media screen and (min-width: 990px) {
  .header { grid-template-columns: 3fr 11fr 10fr !important; }
}
.field__label { font-size: 11px; font-weight: 550; top: 13px; }

/* ── GrandMenu Fixes ── */
.gm-submenu.gm-mega { width: 810px !important; }
.gm-submenu.gm-mega.gm-submenu-bordered { max-height: 595px !important; }

/* ── Table Styles (Legacy + Ideation) ── */
.divtable, .oc-table-wrap {
  overflow-x: auto;
  width: 100%;
  display: block;
}
table, .oc-table-wrap table {
  border-collapse: collapse;
  width: 100%;
  white-space: nowrap;
  table-layout: auto;
  min-width: 120px;
}
@media (max-width: 768px) {
  table, .oc-table-wrap table { min-width: 550px; }
}
thead tr > th, .oc-table-wrap thead tr > th {
  background: #bef3f3;
  color: black;
  font-weight: 600;
  position: sticky;
  padding: 0.75rem;
  z-index: 1;
  top: 0;
}
thead tr > :first-child, tbody tr > :first-child {
  position: sticky; left: 0; z-index: 2; min-width: 45px; background-color: white;
}
tbody tr:nth-child(even) { background-color: #eff2f3; }
td, th {
  text-align: center;
  padding: 0.5rem 0.25rem;
  white-space: nowrap;
  overflow: hidden;
  min-width: 40px;
}

/* ── Scrollbar ── */
::-webkit-scrollbar { width: 8px; height: 6px; }
::-webkit-scrollbar-track { background: rgba(241, 241, 241, 1); }
::-webkit-scrollbar-thumb { background: #bbb; border-radius: 10px; }
::-webkit-scrollbar-thumb:hover { background: #999; }

