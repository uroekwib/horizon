/* ── Sticky Contact Bar ── */
.position-fixed.social-wrapper.bottom_social {
  padding: 10px 0;
  bottom: 125px !important;
  width: 50px;
  height: 195px;
  position: fixed;
  right: 0;
  z-index: 999;
  border-top-left-radius: 20px;
  border-bottom-left-radius: 20px;
  justify-content: center;
  align-items: stretch;
  background: linear-gradient(108deg,rgba(223,213,254,.7) 0%,rgba(215,252,240,.7) 100%);
  backdrop-filter: blur(2rem);
}
@media (max-width: 749px) {
  .position-fixed.social-wrapper.bottom_social {
    padding-top: 8px;
    bottom: 0 !important;
    width: 100%;
    height: 60px;
    border-radius: 0;
    display: flex;
  }
}

/* ── Horizon-Specific Overrides ── */
.shopify-section-group-header-group .header {
  backdrop-filter: var(--oc-blur);
  -webkit-backdrop-filter: var(--oc-blur);
  background: var(--oc-glass) !important;
  border-bottom: 1px solid rgba(200, 200, 240, 0.35);
}

.button, .btn {
  border-radius: var(--oc-radius-pill) !important;
  font-family: var(--oc-font-body);
  font-weight: 600;
}
.button--primary {
  background: var(--oc-grad-btn) !important;
  background-size: 200% !important;
  color: #fff !important;
  border: none !important;
}
.button--primary:hover {
  background-position: 100% 0 !important;
  box-shadow: var(--oc-shadow-glow-cyan);
}

/* ── Black Ribbon ── */
.octo-black-ribbon {
  position: fixed;
  left: calc(env(safe-area-inset-left, 0));
  bottom: calc(env(safe-area-inset-bottom, 0));
  z-index: 99999;
  width: 90px;
  pointer-events: auto;
}
.octo-black-ribbon img { width: 100%; height: auto; pointer-events: none; }
@media (max-width: 480px){
  .octo-black-ribbon { width: 64px; bottom: 0 !important; }
}
