/* ── Brand Tokens (Octopus CI) ── */
@font-face {
  font-family: 'Google Sans';
  src: url('{{ "GoogleSans-Regular.woff2" | asset_url }}') format('woff2');
  font-weight: normal;
  font-style: normal;
  font-display: swap;
  unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
}

@font-face {
  font-family: 'Noto Sans Thai';
  src: url('{{ "NotoSansThai-Regular.woff" | asset_url }}') format('woff');
  font-weight: normal;
  font-style: normal;
  font-display: swap;
}

@font-face {
  font-family: 'Noto Sans Thai';
  src: url('{{ "NotoSansThai-Bold.woff" | asset_url }}') format('woff');
  font-weight: bold;
  font-style: normal;
  font-display: swap;
}

:root {
  --font-body-family: 'Google Sans', 'Noto Sans Thai', sans-serif;
  --font-heading-family: 'Google Sans', 'Noto Sans Thai', sans-serif;

  --brand-cyan:        #17a9bb;
  --brand-cyan-vv:     #14c9df;
  --brand-bg:          #f3f7fa;
  --brand-grad-1:      linear-gradient(140deg, rgba(241,236,255,1) 22%, rgba(235,252,255,0.85) 45%, rgba(236,255,254,0.81) 74%, rgba(242,255,250,1) 100%);
  --brand-grad-2:      linear-gradient(177deg, #c3f9ff 0%, #c78ff2 100%);
  --oc-purple:         #A78BFA;
  --oc-purple-d:       #7C3AED;
  --oc-purple-l:       #F3F0FF;
  --oc-purple-rgb:     124, 58, 237;
  --oc-grad-btn:       linear-gradient(90deg, #14c9df, #17a9bb, #818CF8, #A78BFA);
  --oc-grad-btn-rev:   linear-gradient(90deg, #A78BFA, #818CF8, #17a9bb, #14c9df);
}

/* Button Overrides */
.button,
button.shopify-payment-button__button--unbranded {
  --button-background-color: var(--oc-grad-btn) !important;
}

.button-secondary {
  --button-background-color: var(--brand-grad-2) !important;
}

.section-background.color-scheme-1 {
  background: linear-gradient(140deg, rgba(241, 236, 255, 1) 22%, rgba(235, 252, 255, 0.85) 45%, rgba(236, 255, 254, 0.81) 74%, rgba(242, 255, 250, 1) 100%) !important;
}

.section-background.color-scheme-4 {
  background: linear-gradient(--oc-grad-btn-rev) !important;
}

