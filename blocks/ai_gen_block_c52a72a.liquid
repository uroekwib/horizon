<script>
(function () {
  const SUFFIX = '{{ ai_gen_id }}';

  class BlogFilter extends HTMLElement {
    constructor() {
      super();
      this.postsPerPage = parseInt('{{ block.settings.posts_per_page }}');
      this.currentPage  = 1;
      this.activeFilter = null; // null = แสดงทั้งหมด
    }

    connectedCallback() {
      this.buttons     = Array.from(this.querySelectorAll(`.blog-filter__btn-${SUFFIX}`));
      this.posts       = Array.from(this.querySelectorAll(`.blog-filter__post-${SUFFIX}`));
      this.grid        = this.querySelector(`.blog-filter__posts-${SUFFIX}`);
      this.loadMoreBtn = this.querySelector(`.blog-filter__load-more-btn-${SUFFIX}`);

      this.buttons.forEach(btn =>
        btn.addEventListener('click', () => this.handleFilter(btn))
      );

      if (this.loadMoreBtn) {
        this.loadMoreBtn.addEventListener('click', () => {
          this.currentPage++;
          this.render();
        });
      }

      // แสดงทั้งหมดตอน init
      this.render();
    }

    handleFilter(btn) {
      const handle = btn.dataset.filter;

      if (this.activeFilter === handle) {
        // กดซ้ำ → ยกเลิก filter
        this.activeFilter = null;
        this.buttons.forEach(b => {
          b.classList.remove('is-active');
          b.setAttribute('aria-pressed', 'false');
        });
      } else {
        this.activeFilter = handle;
        this.buttons.forEach(b => {
          const match = b.dataset.filter === handle;
          b.classList.toggle('is-active', match);
          b.setAttribute('aria-pressed', String(match));
        });
      }

      this.currentPage = 1;

      // brief flash เพื่อให้รู้ว่า filter เปลี่ยน
      this.grid.classList.add('is-filtering');
      requestAnimationFrame(() => {
        this.render();
        this.grid.classList.remove('is-filtering');
      });
    }

    getFiltered() {
      if (!this.activeFilter) return this.posts;
      return this.posts.filter(p => p.dataset.blog === this.activeFilter);
    }

    render() {
      const filtered  = this.getFiltered();
      const showCount = this.postsPerPage * this.currentPage;
      const toShow    = filtered.slice(0, showCount);
      const toHide    = this.posts.filter(p => !toShow.includes(p));

      toHide.forEach(p => {
        p.classList.remove('is-visible');
        p.classList.add('is-hidden');
      });

      toShow.forEach((p, i) => {
        p.classList.remove('is-hidden');
        setTimeout(() => p.classList.add('is-visible'), i * 40);
      });

      if (this.loadMoreBtn) {
        this.loadMoreBtn.classList.toggle('is-hidden', filtered.length <= showCount);
      }
    }
  }

  const tagName = `blog-filter-${SUFFIX}`;
  if (!customElements.get(tagName)) {
    customElements.define(tagName, BlogFilter);
  }
})();
</script>

