    transform: translateY(-6px);
    box-shadow: 0 12px 36px rgba(20, 201, 223, 0.15);
    border-color: rgba(20, 201, 223, 0.3);
  }

  .blog-filter__post-image-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: {{ block.settings.image_aspect_ratio }};
    overflow: hidden;
  }

