  Blog filter — 3 blogs, CI Cyan Duo design system
  - ไม่มีปุ่ม "ทั้งหมด"
  - กดปุ่ม active อีกครั้ง = ยกเลิก filter (แสดงทั้งหมด)
  - ปุ่ม default = glassmorphism / active = CI gradient
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .blog-filter-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    margin: 0 auto;
  }

  .blog-filter__container-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  /* ── Filter Buttons ── */
  .blog-filter__buttons-{{ ai_gen_id }} {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    justify-content: {{ block.settings.filter_alignment }};
  }

  .blog-filter__btn-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 10px 22px;
    font-family: 'Brand Font', sans-serif;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: 600;
    border-radius: 999px;
    border: 1.5px solid rgba(23, 169, 187, 0.35);
    background: rgba(255, 255, 255, 0.72);
    color: #374151;
    cursor: pointer;
    position: relative;
    overflow: hidden;
    transition:
      transform 0.15s cubic-bezier(0.34, 1.56, 0.64, 1),
      box-shadow 0.25s ease,
      border-color 0.2s ease,
      background 0.2s ease,
      color 0.2s ease;
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    letter-spacing: 0.02em;
    white-space: nowrap;
  }

  .blog-filter__btn-{{ ai_gen_id }}:hover {
    transform: translateY(-2px);
    border-color: rgba(20, 201, 223, 0.7);
    box-shadow: 0 4px 16px rgba(20, 201, 223, 0.20);
    color: #17a9bb;
    background: rgba(227, 248, 251, 0.85);
  }

  .blog-filter__btn-{{ ai_gen_id }}:active {
    transform: translateY(0) scale(0.97);
    transition-duration: 0.06s;
  }

  /* Active = CI gradient */
  .blog-filter__btn-{{ ai_gen_id }}.is-active {
    background: linear-gradient(90deg, #14c9df 0%, #17a9bb 35%, #818CF8 65%, #A78BFA 100%);
    background-size: 200% 100%;
    border-color: transparent;
    color: #fff;
    box-shadow:
      0 4px 20px rgba(20, 201, 223, 0.30),
      0 1px 6px rgba(23, 169, 187, 0.20);
    animation: blog-btn-shimmer-{{ ai_gen_id }} 4s ease infinite;
  }

  @keyframes blog-btn-shimmer-{{ ai_gen_id }} {
    0%   { background-position: 0% 50%; }
    50%  { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }

  .blog-filter__btn-{{ ai_gen_id }}.is-active:hover {
    transform: translateY(-2px);
    filter: brightness(1.06);
    color: #fff;
    box-shadow:
      0 6px 24px rgba(20, 201, 223, 0.40),
      0 2px 8px rgba(23, 169, 187, 0.25);
  }



  /* ── Post Grid ── */
  .blog-filter__posts-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.posts_per_row }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
    transition: opacity 0.15s ease;
  }

  @media screen and (max-width: 749px) {
    .blog-filter__posts-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.posts_per_row_mobile }}, 1fr);
    }
  }

  .blog-filter__posts-{{ ai_gen_id }}.is-filtering {
    opacity: 0.4;
    pointer-events: none;
  }

  .blog-filter__post-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    border-radius: 16px;
    overflow: hidden;
    background: rgba(255, 255, 255, 0.82);
    border: 1px solid rgba(200, 200, 240, 0.3);
    box-shadow: 0 2px 16px rgba(100, 100, 160, 0.06);
    opacity: 0;
    transform: translateY(16px);
    transition:
      opacity 0.35s ease,
      transform 0.35s ease,
      box-shadow 0.35s cubic-bezier(0.16, 1, 0.3, 1),
      border-color 0.25s ease;
  }

  .blog-filter__post-{{ ai_gen_id }}.is-visible {
    opacity: 1;
    transform: translateY(0);
  }

  .blog-filter__post-{{ ai_gen_id }}.is-hidden {
    display: none;
  }

