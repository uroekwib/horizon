    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.55s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .blog-filter__post-{{ ai_gen_id }}:hover .blog-filter__post-image-{{ ai_gen_id }} img {
    transform: scale(1.06);
  }

  .blog-filter__post-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background: linear-gradient(140deg, rgba(235,252,255,0.85) 0%, rgba(241,236,255,0.85) 100%);
