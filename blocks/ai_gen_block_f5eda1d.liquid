    margin: 0;
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.text_color }};
    text-align: {{ block.settings.heading_alignment }};
  }

  .ai-multi-blog-buttons-{{ ai_gen_id }} {
    display: flex;
    flex-wrap: wrap;
    gap: {{ block.settings.button_gap }}px;
    justify-content: {{ block.settings.button_alignment }};
  }

  .ai-multi-blog-button-{{ ai_gen_id }} {
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
    display: inline-block;
  }

  .ai-multi-blog-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border_color }};
  }

  .ai-multi-blog-button-{{ ai_gen_id }}.active {
    background-color: {{ block.settings.button_active_background }};
    color: {{ block.settings.button_active_text_color }};
    border-color: {{ block.settings.button_active_border_color }};
  }

  .ai-multi-blog-content-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-multi-blog-section-{{ ai_gen_id }} {
    display: none;
  }

  .ai-multi-blog-section-{{ ai_gen_id }}.active {
    display: contents;
  }

  .ai-multi-blog-article-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .ai-multi-blog-article-image-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: {{ block.settings.image_aspect_ratio }};
    overflow: hidden;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-multi-blog-article-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-multi-blog-article-{{ ai_gen_id }}:hover .ai-multi-blog-article-image-{{ ai_gen_id }} img {
    transform: scale(1.05);
  }

  .ai-multi-blog-article-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-multi-blog-article-image-placeholder-{{ ai_gen_id }} svg {
    width: 50%;
    height: 50%;
    opacity: 0.3;
  }

  .ai-multi-blog-article-content-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .ai-multi-blog-article-meta-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 12px;
    color: {{ block.settings.meta_color }};
  }

  .ai-multi-blog-article-blog-name-{{ ai_gen_id }} {
    padding: 4px 10px;
    background-color: {{ block.settings.blog_badge_background }};
    color: {{ block.settings.blog_badge_text_color }};
    border-radius: 12px;
    font-size: 11px;
    text-transform: uppercase;
    font-weight: 600;
  }

  .ai-multi-blog-article-title-{{ ai_gen_id }} {
    margin: 0;
    font-size: {{ block.settings.article_title_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.3;
  }

