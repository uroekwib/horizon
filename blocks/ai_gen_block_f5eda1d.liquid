<script>
  (function() {
    class MultiBlogFilter{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.buttons = this.querySelectorAll('.ai-multi-blog-button-{{ ai_gen_id }}');
        this.sections = this.querySelectorAll('.ai-multi-blog-section-{{ ai_gen_id }}');
        this.setupEventListeners();
      }

      setupEventListeners() {
        this.buttons.forEach((button) => {
          button.addEventListener('click', (e) => {
            e.preventDefault();
            const blogId = button.getAttribute('data-blog');
            this.switchBlog(blogId);
            this.updateActiveButton(button);
          });
        });
      }

      switchBlog(blogId) {
        this.sections.forEach((section) => {
          const sectionBlogId = section.getAttribute('data-blog-section');
          if (sectionBlogId === blogId) {
            section.classList.add('active');
          } else {
            section.classList.remove('active');
          }
        });
      }

      updateActiveButton(activeButton) {
        this.buttons.forEach((btn) => btn.classList.remove('active'));
        activeButton.classList.add('active');
      }
    }

    customElements.define('multi-blog-filter-{{ ai_gen_id }}', MultiBlogFilter{{ ai_gen_id }});
  })();
</script>

