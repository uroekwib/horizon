<script>
  (function() {
    class AiHero{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.wrapThaiText();
      }

      wrapThaiText() {
        const heading = this.querySelector('.ai-hero-heading-{{ ai_gen_id }}');
        if (!heading) return;

        const thaiRegex = /[\u0E00-\u0E7F]+/g;
        
        heading.childNodes.forEach(node => {
          if (node.nodeType === Node.TEXT_NODE) {
            const text = node.textContent;
            const wrappedText = text.replace(thaiRegex, match => {
              return `<span class="thai-text">${match}</span>`;
            });
            
            if (wrappedText !== text) {
              const span = document.createElement('span');
              span.innerHTML = wrappedText;
              node.replaceWith(span);
            }
          }
        });
      }
    }

    customElements.define('ai-hero-{{ ai_gen_id }}', AiHero{{ ai_gen_id }});
  })();
</script>

