    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 6px;
    height: 6px;
    background-color: {{ section.settings.text_color }};
    border-radius: 50%;
  }

  .ai-mini-icon-{{ ai_gen_id }} {
    display: inline-block;
    position: relative;
    flex-shrink: 0;
  }

