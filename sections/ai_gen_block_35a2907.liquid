        width: {{ final_icon_size }}px;
        height: {{ final_icon_size }}px;
        opacity: {{ icon_opacity | divided_by: 100.0 }};
        z-index: {{ icon_z_index }};
        filter: {% if icon_color != blank %}sepia(1) saturate(5) hue-rotate({{ icon_color | color_extract: 'hue' }}deg){% else %}none{% endif %};}

      {% if icon_hide_mobile %}
        @media screen and (max-width: 749px) {
          .ai-mini-icon-{{ ai_gen_id }}-{{ i }} {
            display: none;
          }
        }
      {% endif %}

      {% if icon_animation == 'float' %}
        .ai-mini-icon-{{ ai_gen_id }}-{{ i }} {
          animation: ai-float-{{ ai_gen_id }}-{{ i }} 3s ease-in-out infinite;
        }
        @keyframes ai-float-{{ ai_gen_id }}-{{ i }} {
          0%, 100% { transform: translateY(0); }
          50% { transform: translateY(-10px); }
        }
      {% elsif icon_animation == 'pulse' %}
        .ai-mini-icon-{{ ai_gen_id }}-{{ i }} {
          animation: ai-pulse-{{ ai_gen_id }}-{{ i }} 2s ease-in-out infinite;
        }
        @keyframes ai-pulse-{{ ai_gen_id }}-{{ i }} {
          0%, 100% { transform: scale(1); }
          50% { transform: scale(1.1); }
        }
      {% elsif icon_animation == 'fade-in' %}
        .ai-mini-icon-{{ ai_gen_id }}-{{ i }} {
          animation: ai-fade-in-{{ ai_gen_id }}-{{ i }} 1s ease-out;
        }
        @keyframes ai-fade-in-{{ ai_gen_id }}-{{ i }} {
          0% { opacity: 0; transform: translateY(20px); }
          100% { opacity: {{ icon_opacity | divided_by: 100.0 }}; transform: translateY(0); }
        }
      {% endif %}
    {% endif %}
  {% endfor %}

