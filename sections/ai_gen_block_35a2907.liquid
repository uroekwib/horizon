    padding-left: 0;
    list-style: none;
    text-align: left;
    display: inline-block;
  }

  .ai-image-text-text-{{ ai_gen_id }} li {
    position: relative;
    padding-left: 30px;
    margin-bottom: 8px;
    display: flex;
    align-items: flex-start;
    gap: 8px;
  }

