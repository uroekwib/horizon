    align-items: center;
    min-height: 100vh;
    padding: 20px;
    box-sizing: border-box;}

  .ai-image-text-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ section.settings.content_gap }}px;
    padding: {{ section.settings.section_padding }}px;
    background-color: {{ section.settings.background_color }};
    border-radius: {{ section.settings.border_radius }}px;
    max-width: {{ section.settings.max_width }}px;
    width: 100%;
  }

  .ai-image-text-{{ ai_gen_id }}--reverse {
    flex-direction: row-reverse;
  }

  .ai-image-text-image-{{ ai_gen_id }} {
    position: relative;
    flex: 0 0 {{ section.settings.image_width }}%;
    max-width: {{ section.settings.image_width }}%;}

  .ai-image-text-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    border-radius: {{ section.settings.image_border_radius }}px;
    overflow: hidden;
  }

  .ai-image-text-image-wrapper-{{ ai_gen_id }} img {
    width: 100%;
    height: auto;
    display: block;
  }

  .ai-image-text-placeholder-{{ ai_gen_id }} {
    background-color: #f4f4f4;
    width: 100%;
    aspect-ratio: 4/3;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-image-text-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
  }

  .ai-image-text-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 8px 16px;
    background-color: rgba(255, 255, 255, 0.9);
    border-radius: 4px;
    font-size: 12px;
    color: #666;
    text-align: center;
  }

  .ai-image-text-content-{{ ai_gen_id }} {
    flex: 1;
    color: {{ section.settings.text_color }};
    display: flex;
    flex-direction: column;
    justify-content: center;
    text-align: center;
  }

  .ai-image-text-heading-{{ ai_gen_id }} {
    font-size: {{ section.settings.heading_size }}px;
    font-weight: {{ section.settings.heading_weight }};
    margin: 0 0 {{ section.settings.heading_margin }}px 0;
    color: {{ section.settings.heading_color }};position: relative;
    display: flex;
    align-items: center;
    gap: 8px;
    justify-content: center;
  }

  .ai-image-text-text-{{ ai_gen_id }} {
    font-size: {{ section.settings.text_size }}px;
    line-height: 1.6;
    margin: 0;
    position: relative;
  }

