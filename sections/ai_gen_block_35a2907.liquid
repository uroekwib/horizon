    display: block;
    max-width: 100%;
    height: auto;
  }

  .ai-mini-icon-corner-{{ ai_gen_id }} {
    position: absolute;
    z-index: 2;
  }

  .ai-mini-icon-corner-{{ ai_gen_id }}--top-left {
    top: {{ section.settings.corner_offset }}px;
    left: {{ section.settings.corner_offset }}px;
  }

  .ai-mini-icon-corner-{{ ai_gen_id }}--top-right {
    top: {{ section.settings.corner_offset }}px;
    right: {{ section.settings.corner_offset }}px;
  }

  .ai-mini-icon-corner-{{ ai_gen_id }}--bottom-left {
    bottom: {{ section.settings.corner_offset }}px;
    left: {{ section.settings.corner_offset }}px;
  }

  .ai-mini-icon-corner-{{ ai_gen_id }}--bottom-right {
    bottom: {{ section.settings.corner_offset }}px;
    right: {{ section.settings.corner_offset }}px;
